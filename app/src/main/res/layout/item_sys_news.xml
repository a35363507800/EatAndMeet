<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent"
    >
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/f4"
        android:textColor="@color/C0322"
        android:text="时间"/>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/sys_remind_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ico_dazhaohu"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/sys_remind_icon"
            android:background="@drawable/chat_receiver_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_toRightOf="@+id/sys_remind_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/f3"
                android:textColor="@color/C0321"
                android:layout_marginLeft="5dp"
                android:text="亲爱的用户"
                />

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_content"
                android:textSize="@dimen/f3"
                android:textColor="@color/C0322"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111111111111111"
                />


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>