<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rlEtBody"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/main_background_color"
>
	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/input_bg"
		android:orientation="vertical">
		<EditText
			android:id="@+id/et_input"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@null"
			android:layout_weight="1"
			android:lineSpacingMultiplier="1.5"
			android:padding="12dp"
			android:textCursorDrawable="@drawable/shape_et_cursor"
			android:textColor="@color/FC2"
			android:textColorHint="@color/FC3"
			android:textSize="@dimen/f3"/>
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8px"
			android:gravity="center|right"
		>
			<TextView
				android:id="@+id/tv_current_char"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="0"
				android:textColor="@color/MC5"
				android:textSize="@dimen/f3"/>
			<TextView
				android:id="@+id/tv_max_char"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="24px"
				android:text="/500"
				android:textColor="@color/FC2"
				android:textSize="@dimen/f3"
			/>
		</com.zhy.autolayout.AutoLinearLayout>
	</com.zhy.autolayout.AutoLinearLayout>


</RelativeLayout>