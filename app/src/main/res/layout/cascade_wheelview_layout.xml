<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:background="@color/transparent">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/arl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/all_title"
                    android:layout_width="match_parent"
                    android:layout_height="90px"
                    android:background="@color/c16"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="10px"
                    android:paddingTop="10px">

                        <TextView
                            android:id="@+id/tv_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingLeft="15dp"
                            android:text="取消"
                            android:textColor="@color/C0412"
                            android:textSize="@dimen/f3"/>

                        <TextView
                            android:id="@+id/tv_choose_birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="选择城市"
                            android:textColor="@color/C0321"
                            android:textSize="@dimen/f3"/>

                        <TextView
                            android:id="@+id/tv_ok"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingRight="15dp"
                            android:text="完成"
                            android:textColor="@color/C0412"
                            android:textSize="@dimen/f3"/>

                </com.zhy.autolayout.AutoLinearLayout>


                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/all_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/all_title"
                    android:orientation="horizontal">

                        <com.echoesnet.eatandmeet.views.widgets.cascadeWheelView.WheelView
                            android:id="@+id/wv_province"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <com.echoesnet.eatandmeet.views.widgets.cascadeWheelView.WheelView
                            android:id="@+id/wv_city"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                </com.zhy.autolayout.AutoLinearLayout>

                <!--        <Button
                            android:layout_below="@+id/all_body"
                            android:id="@+id/btn_ok_city"
                            android:layout_width="match_parent"
                            android:layout_height="98px"
                            android:text="@string/btn_ok"
                            android:textSize="32px"
                            android:textColor="@color/white"
                            style="@style/commonButton4"/>-->
        </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>
