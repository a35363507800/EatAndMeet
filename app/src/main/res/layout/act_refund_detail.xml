<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/c5"
	android:orientation="vertical"
	tools:context=".activities.DRefundDetailAct">
	<include android:id="@+id/top_bar" layout="@layout/topbar_template"/>
	<!--主动申请的退款详情-->
	<com.zhy.autolayout.AutoLinearLayout
		android:id="@+id/all_apply_refund_detail"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:orientation="vertical"
		android:paddingLeft="20px">
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="30px">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:text="退款金额："
				android:textColor="@color/c3"
				android:textSize="@dimen/f3"
			/>
			<TextView
				android:id="@+id/tv_refund_sign"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:text="￥"
				android:textColor="@color/MC3"
				android:textSize="@dimen/f2"
				android:textStyle="bold"/>
			<TextView
				android:id="@+id/tv_refund_money"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:textColor="@color/MC3"
				android:textSize="@dimen/f1"
				android:textStyle="bold"/>
		</com.zhy.autolayout.AutoLinearLayout>
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="20px">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:text="退款账号："
				android:textColor="@color/FC2"
				android:textSize="@dimen/f3"
				android:textStyle="normal"/>
			<TextView
				android:id="@+id/tv_refund_cost"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:text=" "
				android:textColor="@color/FC2"
				android:textSize="@dimen/f3"
				android:textStyle="normal"/>
		</com.zhy.autolayout.AutoLinearLayout>
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="20px"
			android:layout_marginTop="20px">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:text="到账时间："
				android:textColor="@color/FC2"
				android:textSize="@dimen/f3"
				android:textStyle="normal"/>
			<TextView
				android:id="@+id/tv_refund_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:text=""
				android:textColor="@color/FC2"
				android:textSize="@dimen/f3"
				android:textStyle="normal"/>
		</com.zhy.autolayout.AutoLinearLayout>
	</com.zhy.autolayout.AutoLinearLayout>
	<!--过期的退款详情-->
	<com.zhy.autolayout.AutoLinearLayout
		android:id="@+id/all_past_due_detail"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:orientation="vertical"
		android:paddingLeft="20px"
	    android:visibility="gone">
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="30px">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:text="退款金额："
				android:textColor="@color/c3"
				android:textSize="@dimen/f3"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:text="￥"
				android:textColor="@color/MC3"
				android:textSize="@dimen/f2"
				android:textStyle="bold"/>
			<TextView
				android:id="@+id/tv_pass_due_refund_amount"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:text="0.00"
				android:textColor="@color/MC3"
				android:textSize="@dimen/f1"
				android:textStyle="bold"/>
		</com.zhy.autolayout.AutoLinearLayout>
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="20px">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:text="扣减手续费："
				android:textColor="@color/FC2"
				android:textSize="@dimen/f3"
				android:textStyle="normal"/>
			<TextView
				android:id="@+id/tv_pass_due_refund_fee"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:text=" "
				android:textColor="@color/MC5"
				android:textSize="@dimen/f3"
				android:textStyle="normal"/>
		</com.zhy.autolayout.AutoLinearLayout>
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="20px"
			android:layout_marginTop="20px">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:text="退款账户："
				android:textColor="@color/FC2"
				android:textSize="@dimen/f3"
				android:textStyle="normal"/>
			<TextView
				android:id="@+id/tv_pass_due_refund_type"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:text=""
				android:textColor="@color/FC2"
				android:textSize="@dimen/f3"
				android:textStyle="normal"/>
		</com.zhy.autolayout.AutoLinearLayout>
	</com.zhy.autolayout.AutoLinearLayout>
	<!--退款进度-->
	<com.zhy.autolayout.AutoLinearLayout
		android:id="@+id/all_apply_refund_progress"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20px"
		android:background="@color/white"
		android:orientation="vertical"
		android:paddingBottom="50px"
		android:paddingLeft="20px"
	    android:visibility="gone">
		<TextView android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_marginTop="30px"
				  android:text="退款进度："
				  android:textColor="@color/FC2"
				  android:textSize="@dimen/f3"/>
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:layout_marginTop="30px">
			<!--第一步-->
			<com.zhy.autolayout.AutoLinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center_vertical">
				<ImageView
					android:id="@+id/iv_dot1"
					android:layout_width="30px"
					android:layout_height="30px"
					android:src="@drawable/dot_y"
				    android:layout_gravity="bottom"/>
				<TextView
					android:id="@+id/tv_refund_review"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="看脸吃饭审核中"
					android:textColor="@color/MC3"
					android:textSize="@dimen/f3"
					android:textStyle="normal"
				    android:layout_marginLeft="30px"/>
			</com.zhy.autolayout.AutoLinearLayout>
			<!--第一到第二部分中间-->
			<com.zhy.autolayout.AutoLinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<View
					android:id="@+id/v_line1"
					android:layout_width="4px"
					android:layout_height="90dp"
					android:background="@color/FC7"
				    android:layout_marginLeft="12px"/>
				<com.zhy.autolayout.AutoLinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="40px"
					android:orientation="vertical">
					<TextView
						android:id="@+id/tv_refund_accept"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="20px"
						android:textColor="@color/FC2"
						android:textSize="@dimen/f3"
						android:textStyle="normal"/>
					<TextView
						android:id="@+id/tv_refund_show_time"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="20px"
						android:text="  "
						android:textColor="@color/FC2"
						android:textSize="@dimen/f3"
						android:textStyle="normal"/>
				</com.zhy.autolayout.AutoLinearLayout>
			</com.zhy.autolayout.AutoLinearLayout>

			<com.zhy.autolayout.AutoLinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
			    android:gravity="center_vertical">
				<ImageView
					android:id="@+id/iv_dot2"
					android:layout_width="30px"
					android:layout_height="30px"
					android:src="@drawable/dot_n"/>
				<TextView
					android:id="@+id/tv_refund_result"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="审核结果"
					android:textColor="@color/FC2"
					android:textSize="@dimen/f3"
					android:textStyle="normal"
					android:layout_marginLeft="30px"/>
			</com.zhy.autolayout.AutoLinearLayout>

			<!--第二到第三部分中间-->
			<com.zhy.autolayout.AutoLinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<View
					android:id="@+id/v_line2"
					android:layout_width="4px"
					android:layout_height="90dp"
					android:background="@color/FC7"
					android:layout_marginLeft="12px"/>
				<com.zhy.autolayout.AutoLinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="40px"
					android:orientation="vertical">
					<TextView
						android:id="@+id/tv_refund_check_result"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="20px"
						android:textColor="@color/FC2"
						android:textSize="@dimen/f3"
						android:textStyle="normal"/>
					<TextView
						android:id="@+id/tv_refund_check_time"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="20px"
						android:text="  "
						android:textColor="@color/FC2"
						android:textSize="@dimen/f3"
						android:textStyle="normal"/>
				</com.zhy.autolayout.AutoLinearLayout>
			</com.zhy.autolayout.AutoLinearLayout>

			<com.zhy.autolayout.AutoLinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical">
				<ImageView
					android:id="@+id/iv_dot3"
					android:layout_width="30px"
					android:layout_height="30px"
					android:src="@drawable/dot_n"/>
				<TextView
					android:id="@+id/tv_refund_finish"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="到账处理"
					android:textColor="@color/FC2"
					android:textSize="@dimen/f3"
					android:textStyle="normal"
				    android:layout_marginLeft="30px"/>
			</com.zhy.autolayout.AutoLinearLayout>
			<TextView
				android:id="@+id/tv_refund_get_money_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="20px"
				android:layout_marginLeft="50px"
				android:text="  "
				android:textColor="@color/FC2"
				android:textSize="@dimen/f3"
				android:textStyle="normal"/>

		</com.zhy.autolayout.AutoLinearLayout>
	</com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
