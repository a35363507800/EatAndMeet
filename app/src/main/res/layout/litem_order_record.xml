<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	android:id="@+id/all_order_container"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="5dp"
	android:background="@drawable/white"
	android:descendantFocusability="blocksDescendants"
	android:orientation="vertical"
	android:paddingLeft="0px"
	android:paddingRight="0px">

	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="72px"
		android:orientation="horizontal"
		android:paddingLeft="20px"
		android:paddingRight="20px">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:text="订单号："
			android:textColor="@color/c3"
			android:textSize="@dimen/f4"/>

		<TextView
			android:id="@+id/tv_order_id"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:textColor="@color/c3"
			android:textSize="@dimen/f4"/>

		<TextView
			android:id="@+id/tv_order_time"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical"
			android:layout_weight="1"
			android:gravity="center"
			android:textColor="@color/c4"
			android:textSize="@dimen/f4"/>


	</com.zhy.autolayout.AutoLinearLayout>

	<ImageView
		android:id="@+id/img_order_booty_call"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20px"
		android:layout_marginRight="20px"
		android:layout_marginTop="9px"
		android:layout_marginBottom="20px"
		android:scaleType="centerCrop"
		android:visibility="gone"
		android:src="@drawable/ico_yuechifan_xhdpi"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:layout_marginLeft="20px"
		android:layout_marginRight="20px"
		android:background="@color/c5"/>

	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/all_order_info"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20px"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingLeft="20px"
		android:paddingRight="20px">

		<TextView
			android:id="@+id/tv_order_res_name"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:textColor="@color/c2"
			android:singleLine="false"
			android:textSize="@dimen/f3"/>

		<TextView
			android:id="@+id/tv_gang"
			android:layout_toRightOf="@+id/tv_order_res_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="---"
			android:layout_alignBottom="@id/tv_order_res_name"
			android:singleLine="false"
			android:textColor="@color/c3"/>

		<TextView
			android:layout_toRightOf="@+id/tv_gang"
			android:id="@+id/tv_order_dish_count"
			android:layout_width="wrap_content"
			android:layout_marginRight="5px"
			android:layout_alignParentRight="true"
			android:layout_alignBottom="@id/tv_order_res_name"
			android:layout_height="wrap_content"
			android:textColor="@color/c3"
			android:textSize="@dimen/f4"/>

		<TextView
			android:id="@+id/tv_order_type"
			android:layout_alignParentRight="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical|right"
			android:gravity="center"
			android:textColor="@color/MC1"
			android:textSize="@dimen/f3"/>

	</com.zhy.autolayout.AutoRelativeLayout>

	<com.linearlistview.LinearListView
		android:id="@+id/lv_order_dish_lst"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20px"
		android:layout_marginRight="20px"
		android:focusable="false"
		android:focusableInTouchMode="false"
		android:cacheColorHint="@color/transparent"
		android:listSelector="@color/transparent"
		android:orientation="vertical"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="20px"
		android:background="@drawable/white"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:text="订单日期为："
			android:textColor="@color/c3"
			android:textSize="@dimen/f3"/>

		<TextView
			android:id="@+id/tv_order_validity"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical"
			android:gravity="center"
			android:textColor="@color/c3"
			android:textSize="@dimen/f3"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="15dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:text="有效期至："
			android:textColor="@color/C0322"
			android:textSize="@dimen/f3"/>

		<TextView
			android:id="@+id/tv_order_left_time"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical"
			android:gravity="center"
			android:textColor="@color/c10"
			android:textSize="@dimen/f3"/>
	</LinearLayout>

	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="20px"
		android:layout_marginTop="20px"
		android:paddingLeft="20px"
		android:paddingRight="20px">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:text="总额："
			android:textColor="@color/C0321"
			android:textSize="@dimen/f3"/>

		<TextView
			android:id="@+id/tv_order_total_money"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical"
			android:layout_weight="1"
			android:gravity="left|center_vertical"
			android:textColor="@color/C0412"
			android:textSize="@dimen/f1"/>
		<TextView
			android:id="@+id/tv_friend_pay"
			android:layout_width="60dp"
			android:layout_height="30dp"
			android:layout_marginLeft="10px"
			android:text="求买单"
			android:gravity="center"
			android:layout_gravity="center_horizontal"
			android:background="@drawable/round_frame_6_fc3_white"
				android:textColor="@color/C0323"
			android:textSize="@dimen/f4"/>
		<Button
			android:id="@+id/btn_order_check_code"
			style="@style/circle_corner_btn_36_red_bg"
			android:layout_width="80dp"
			android:layout_height="30dp"
			android:layout_marginLeft="12dp"
			android:padding="3dp"
			android:text="查看消费码"
			android:textColor="@color/C0324"
			android:textSize="@dimen/f4"/>
	</com.zhy.autolayout.AutoLinearLayout>
<!--	android:descendantFocusability="blocksDescendants"-->
</com.zhy.autolayout.AutoLinearLayout>