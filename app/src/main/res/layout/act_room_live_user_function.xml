<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:id="@+id/ll_room_live_userfunction_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/blackT50"
        android:layout_marginTop="2dp"
       android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/bt_room_live_userfunction_sendtext"
            android:layout_width="42dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:text="发言"
            android:textSize="@dimen/f6"
            android:layout_marginLeft="10dp"
            />
        <Button
            android:id="@+id/bt_room_live_userfunction_report"
            android:layout_width="42dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:text="举报"
            android:textSize="@dimen/f6"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/bt_room_live_userfunction_message"
            android:layout_width="42dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:text="消息"
            android:textSize="@dimen/f6"
            android:layout_marginLeft="80dp"

            />

        <Button
            android:id="@+id/bt_room_live_userfunction_package"
            android:layout_width="42dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:text="红包"
            android:textSize="@dimen/f6"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/bt_room_live_userfunction_share"
            android:layout_width="42dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:text="分享"
            android:textSize="@dimen/f6"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/bt_room_live_userfunction_gift"
            android:layout_width="42dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:text="礼物"
            android:textSize="@dimen/f6"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>
</LinearLayout>