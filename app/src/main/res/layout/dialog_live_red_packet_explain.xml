<?xml version="1.0" encoding="utf-8"?>

<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:gravity="center">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/arl_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="红包说明"
            android:textColor="@color/C0324"
            android:textSize="@dimen/f1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="38dp"
            android:singleLine="true"
            android:text="如何发送红包?"
            android:textColor="@color/C0314"
            android:textSize="@dimen/f3" />

        <TextView
            android:id="@+id/tv_red_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="12dp"
            android:singleLine="false"
            android:textColor="@color/C0324"
            android:textSize="@dimen/f3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:lineSpacingExtra="12dp"
            android:text="红包规则"
            android:textColor="@color/C0314"
            android:textSize="@dimen/f3" />

        <TextView
            android:id="@+id/tv_red_rule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="12dp"
            android:singleLine="false"
            android:textColor="@color/C0324"
            android:textSize="@dimen/f3" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:gravity="center_horizontal">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/itv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{eam-s-close-circle @color/white @dimen/close}" />

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>


