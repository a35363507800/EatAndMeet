<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:layout_width="50dp"
			  android:layout_height="55dp">

	<FrameLayout
		android:id="@+id/rl_container"
		android:layout_width="wrap_content"
		android:layout_height="54dp"
		android:layout_gravity="center"
		android:background="@drawable/linzuo_dingwei_xhdpi"
	>

		<com.makeramen.roundedimageview.RoundedImageView
			android:id="@+id/riv_c_accost_head"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:scaleType="centerCrop"
			android:src="@color/c16"
			app:riv_border_color="@color/MC1"
			app:riv_border_width="2dp"
			app:riv_oval="true"/>
		<TextView
			android:id="@+id/tv_orderNum"
			android:layout_width="wrap_content"
			android:layout_height="18dp"
			android:layout_gravity="top|right"
			android:background="@drawable/shape_circle_mc1_bg"
			android:gravity="center"
			android:minWidth="18dp"
			android:textColor="@color/white"
			android:textSize="@dimen/f4"
			android:visibility="visible"/>
		<TextView
			android:id="@+id/tv_live_play"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_gravity="top|right"
			android:background="@drawable/live_play_icon"
			android:visibility="gone"/>
		<TextView
			android:id="@+id/tv_order_res"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_gravity="bottom|left"
			android:background="@drawable/order_res_icon"
			android:visibility="gone"/>
	</FrameLayout>
</LinearLayout>