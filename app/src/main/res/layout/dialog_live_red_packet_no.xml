<?xml version="1.0" encoding="utf-8"?>

<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:gravity="center">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/arl_red"
        android:layout_width="275dp"
        android:layout_height="450dp"
        android:background="@drawable/zb_meiqiangdao"
        android:orientation="vertical">

        <com.echoesnet.eatandmeet.views.widgets.LevelHeaderView
            android:id="@+id/lhv_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:level_ril_icon ="false"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/all_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lhv_head"
                android:layout_marginLeft="6dp"
                android:textColor="@color/C0324"
                android:textSize="@dimen/f2"
                tools:text="测试用户昵称" />


            <com.echoesnet.eatandmeet.views.widgets.GenderView
                android:id="@+id/iv_sex"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="13dp"
                android:layout_marginLeft="4dp"/>

            <com.echoesnet.eatandmeet.views.widgets.LevelView
                android:id="@+id/lv_level"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="13dp"/>

        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:id="@+id/tv_red_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:text="手慢了，红包被抢光"
            android:textColor="@color/C0312"
            android:textSize="@dimen/f3" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/itv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:text="{eam-s-close-circle @color/white @dimen/close}" />

</com.zhy.autolayout.AutoLinearLayout>


