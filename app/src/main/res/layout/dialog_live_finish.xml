<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
>

	<ImageView
		android:id="@+id/img_live_finish_cover"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="centerCrop"/>
	<ImageView android:layout_width="match_parent"
			   android:layout_height="match_parent"
			   android:background="@color/translucent"/>
	<TextView
		android:id="@+id/live_finish"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="150dp"
		android:gravity="center"
		android:text="@string/live_end_tips"
		android:textColor="@color/MC2"
		android:textSize="@dimen/f1"/>
	<RelativeLayout
		android:id="@+id/user_info"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/live_finish"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="55dp"
		android:gravity="center_vertical">
		<com.echoesnet.eatandmeet.views.widgets.LevelHeaderView
			android:id="@+id/level_header_view"
			android:layout_width="50dp"
			android:layout_height="50dp"
			/>
		<LinearLayout
			android:id="@+id/rl_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@+id/tv_nick_name"
			android:layout_centerVertical="true"
			android:gravity="center_vertical"
			android:layout_marginLeft="15dp"
			android:layout_toRightOf="@id/level_header_view"
			android:orientation="horizontal">
			<com.echoesnet.eatandmeet.views.widgets.GenderView
				android:id="@+id/tv_connect_age"
				android:layout_width="wrap_content"
				android:layout_height="15dp"
				android:gravity="center"
				android:textColor="@color/white"
				android:textSize="@dimen/f5"/>
			<com.echoesnet.eatandmeet.views.widgets.LevelView
				android:id="@+id/level_view"
				android:layout_width="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_height="15dp"
				app:text_size="@dimen/f6"/>

		</LinearLayout>
		<TextView
			android:id="@+id/tv_nick_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@+id/level_header_view"
			android:layout_alignLeft="@id/rl_container"
			android:layout_marginTop="7dp"
			android:text="nicName"
			android:textColor="@color/white"/>
	</RelativeLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="44dp"
		android:layout_below="@+id/user_info"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="150dp">
		<com.joanzapata.iconify.widget.IconTextView
			android:id="@+id/btn_back"
			android:layout_width="130dp"
			android:layout_height="match_parent"
			android:background="@drawable/round_white_bg_live_connect"
			android:gravity="center"
			android:text="返回"
			android:textColor="@color/white"
			android:textSize="@dimen/f2"/>

		<com.joanzapata.iconify.widget.IconTextView
			android:id="@+id/btn_addFocus"
			android:layout_width="130dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="15dp"
			android:background="@drawable/round_c0313_bg_live_connect"
			android:gravity="center"
			android:text="{eam-s-spades} 加关注"
			android:textColor="@color/C0313"
			android:textSize="@dimen/f2"/>

	</LinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>


