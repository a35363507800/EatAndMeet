<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_bg"
        android:layout_width="318px"
        android:layout_height="340px"
        android:layout_centerInParent="true">

        <com.echoesnet.eatandmeet.views.widgets.LevelHeaderView
            android:id="@+id/riv_user_header"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35px"/>

        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/riv_user_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15px"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_sex_icon"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginLeft="6px"
                android:src="@drawable/man_1_xxhdpi"
                />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="4px"
                android:maxLines="1"
                android:textColor="@color/FC1"
                android:textSize="@dimen/f2"/>
            <!--	android:maxEms="4"-->
        </LinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/arl_more"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/ll_container"
            android:layout_marginBottom="8px"
            android:gravity="center"
            android:orientation="horizontal">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/iv_live_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="{eam-e9a3} 直播中"
                android:textColor="@color/MC7"
                android:textSize="@dimen/f5"
                android:visibility="gone"/>
            <!--	android:layout_marginBottom="@dimen/d4"-->
            <View
                android:id="@+id/view_div"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/MC7"
                android:visibility="gone"/>

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/iv_meal_icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d4"
                android:layout_weight="1"
                android:gravity="center"
                android:text="{eam-e97c} 用餐中"
                android:textColor="@color/MC7"
                android:textSize="@dimen/f5"
                android:visibility="gone"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:background="@color/FC7"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:background="@color/FC7"
            android:visibility="gone"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="30px"
            android:layout_marginTop="30px"
            android:background="@color/FC7"
            android:visibility="gone"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30px"
            android:layout_marginTop="30px"
            android:background="@color/FC7"/>

    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>
