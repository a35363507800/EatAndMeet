<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="270dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/round_bg_c0324"
              android:gravity="center_horizontal"
              android:minWidth="270dp"
              android:orientation="vertical"
              android:paddingBottom="28dp"
              android:paddingTop="28dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="恭喜您免费获得流星一颗"
        android:textColor="@color/BlackP"
        android:textSize="@dimen/f1"/>

    <RelativeLayout
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:background="@drawable/round_8dp_c0333">

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="50dp"
            android:layout_height="46dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="7dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/C0323P"
            android:textSize="@dimen/f6"
            android:text="流星"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/C0313"
            android:textSize="@dimen/f6"
            android:text=" +1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_look_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:text="在礼物中查看或送出哦~"
        android:textColor="@color/C0323P"
        android:textSize="@dimen/f6"/>


    <TextView
        android:id="@+id/tv_gift_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="二十分钟后您将免费获得第二颗流星"
        android:textColor="@color/C0412"
        android:textSize="@dimen/f6"/>


    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="132dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:textColor="@color/C0324"
        android:gravity="center"
        android:textSize="@dimen/f2"
        android:text="确定"
        android:background="@drawable/shape_18dp_c0313"/>
</LinearLayout>