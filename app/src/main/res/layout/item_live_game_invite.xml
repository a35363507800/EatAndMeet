<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <com.echoesnet.eatandmeet.views.widgets.LevelHeaderView
        android:id="@+id/riv_head"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:riv_oval="true"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="12dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/f3"
            android:textColor="#FFA903"
            android:layout_marginBottom="4dp"/>
        <com.echoesnet.eatandmeet.views.widgets.GenderView
            android:id="@+id/gender_view"
            android:layout_width="25dp"
            android:layout_height="12dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/tv_name"/>
        <com.echoesnet.eatandmeet.views.widgets.LevelView
            android:id="@+id/level_header_view"
            android:layout_width="25dp"
            android:layout_height="12dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/gender_view"
            android:layout_below="@+id/tv_name"/>
        <ImageView
            android:id="@+id/img_is_anchor"
            android:layout_width="49dp"
            android:layout_height="28dp"
            android:src="@drawable/img_anchor"
            android:visibility="gone"
            android:layout_marginLeft="4dp"
            android:scaleType="centerCrop"
            android:layout_alignBottom="@+id/tv_name"
            android:layout_toRightOf="@id/tv_name"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/tv_is_send"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:visibility="gone"
            android:textSize="@dimen/f3"
            android:textColor="@color/white"
            android:layout_alignBottom="@+id/gender_view"
            android:layout_alignParentRight="true"
            app:lottie_imageAssetsFolder="images/invite"
            app:lottie_fileName="invite.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_select"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:focusable="false"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:padding="4dp"
        android:src="@drawable/btn_yes"
        android:background="@drawable/btn_choice"/>
</LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:src="@drawable/bg_link"/>
</LinearLayout>