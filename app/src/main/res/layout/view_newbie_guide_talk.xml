<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/blackT20"
	android:orientation="vertical">
	<ImageView
		android:id="@+id/img_downloadExpression"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:src="@drawable/downloadexpression"
		android:visibility="gone"/>
	<ImageView
		android:id="@+id/img_say_hi"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="108dp"
		android:scaleType="fitXY"
		android:src="@drawable/say_hi"
		android:visibility="gone"/>
	<ImageView
		android:id="@+id/img_focus_dynamic"
		android:layout_width="match_parent"
		android:layout_marginRight="20dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="27dp"
		android:visibility="gone"
		android:src="@drawable/focus_dynamic"/>
</RelativeLayout>