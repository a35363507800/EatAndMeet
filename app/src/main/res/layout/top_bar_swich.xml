<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_topbar"
			  xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:background="@color/white"
			  android:orientation="vertical">

	<View android:id="@+id/title_color"
		  android:layout_width="match_parent"
		  android:layout_height="@dimen/top_status_bar_height"
		  android:background="@color/transparent"/>

	<RelativeLayout
		android:id="@+id/rl_title"
		android:layout_width="match_parent"
		android:layout_height="44dp">
		<RelativeLayout
			android:id="@+id/btn_left_c"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:minWidth="40dp"
			android:paddingLeft="15dp">
			<com.joanzapata.iconify.widget.IconTextView
				android:id="@+id/btn_left"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center_vertical"
				android:minWidth="30dp"
				android:text="{eam-n-previous}"
				android:textColor="@color/C0412"
				android:textSize="22sp"/>
			<TextView
				android:id="@+id/tv_btnleft_note"
				android:layout_width="8dp"
				android:layout_height="8dp"
				android:layout_marginLeft="-4dp"
				android:layout_marginTop="10dp"
				android:layout_toRightOf="@id/btn_left"
				android:background="@drawable/shape_rec_r4dp_c0319_bg"
				android:gravity="center"
				android:textSize="@dimen/f6"
				android:visibility="invisible"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/btn_left2_c"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/btn_left_c"
			android:paddingLeft="5dp">
			<com.joanzapata.iconify.widget.IconTextView
				android:id="@+id/btn_left2"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center"
				android:minWidth="30dp"
				android:text=" "
				android:textColor="@color/C0412"
				android:textSize="22sp"
				android:visibility="gone"/>
			<TextView
				android:id="@+id/tv_btnleft2_note"
				android:layout_width="8dp"
				android:layout_height="8dp"
				android:layout_marginLeft="-4dp"
				android:layout_marginTop="10dp"
				android:layout_toRightOf="@id/btn_left2"
				android:background="@drawable/shape_rec_r4dp_c0319_bg"
				android:gravity="center"
				android:textSize="@dimen/f6"
				android:visibility="invisible"/>
		</RelativeLayout>

		<LinearLayout
			android:id="@+id/arl_center_container"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_centerInParent="true"
			android:gravity="center_vertical"
			android:orientation="horizontal"/>

		<RelativeLayout
			android:id="@+id/btn_right_c"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginRight="5dp"
			android:layout_toLeftOf="@+id/btn_right2_c">
			<com.joanzapata.iconify.widget.IconTextView
				android:id="@+id/btn_right"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center"
				android:minWidth="30dp"
				android:textColor="@color/C0412"
				android:textSize="22sp"
				android:visibility="gone"/>
			<TextView
				android:id="@+id/tv_btn_right_note"
				android:layout_width="8dp"
				android:layout_height="8dp"
				android:layout_marginLeft="-4dp"
				android:layout_marginTop="10dp"
				android:layout_toRightOf="@id/btn_right"
				android:background="@drawable/shape_rec_r4dp_c0319_bg"
				android:textSize="@dimen/f6"
				android:visibility="invisible"/>
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/btn_right2_c"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dp">
			<com.joanzapata.iconify.widget.IconTextView
				android:id="@+id/btn_right2"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center"
				android:minWidth="30dp"
				android:text=""
				android:textColor="@color/C0412"
				android:textSize="22sp"
				android:visibility="gone"/>
			<TextView
				android:id="@+id/tv_right2_note"
				android:layout_width="8dp"
				android:layout_height="8dp"
				android:layout_marginLeft="-4dp"
				android:layout_marginTop="10dp"
				android:layout_toRightOf="@id/btn_right2"
				android:background="@drawable/shape_rec_r4dp_c0319_bg"
				android:gravity="center"
				android:textSize="@dimen/f6"
				android:visibility="invisible"/>
		</RelativeLayout>
	</RelativeLayout>

	<View
		android:id="@+id/v_bottom_separator"
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:background="@color/main_separator_color"
		android:visibility="gone"/>
</LinearLayout>