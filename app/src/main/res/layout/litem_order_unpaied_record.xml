<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_order_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingLeft="0px"
    android:paddingRight="0px">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="72px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="订单号："
            android:textColor="@color/c3"
            android:textSize="@dimen/f4" />

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/c3"
            android:textSize="@dimen/f4" />

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center|right"
            android:textColor="@color/c4"
            android:textSize="@dimen/f4" />


    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/img_order_booty_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="9px"
        android:layout_marginBottom="20px"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:src="@drawable/ico_yuechifan_xhdpi"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@color/c5" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_res_name"
            android:layout_width="200dp"
            android:singleLine="false"
            android:layout_height="wrap_content"
            android:textColor="@color/c2"
            android:textSize="@dimen/f3" />

        <TextView
            android:id="@+id/tv_order_dish_count"
            android:layout_toRightOf="@+id/tv_order_res_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5px"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/tv_order_res_name"
            android:layout_marginBottom="2dp"
            android:textColor="@color/c3"
            android:textSize="@dimen/f4" />

        <TextView
            android:id="@+id/tv_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/C0412"
            android:textSize="@dimen/f3" />



    </com.zhy.autolayout.AutoRelativeLayout>

    <com.linearlistview.LinearListView
        android:id="@+id/lv_order_dish_lst"
        android:layout_width="match_parent"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:layout_height="wrap_content"
        android:cacheColorHint="@color/transparent"
        android:listSelector="@color/transparent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical"/>



    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_left_time"
        android:layout_width="match_parent"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="支付有效期："
            android:textColor="@color/c3"
            android:textSize="@dimen/f3" />

        <TextView
            android:id="@+id/tv_order_left_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/c10"
            android:textSize="@dimen/f3" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_marginTop="20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="总额："
            android:textColor="@color/C0321"
            android:textSize="@dimen/f3" />

        <TextView
            android:id="@+id/tv_order_total_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:textColor="@color/C0412"
            android:textSize="@dimen/f1" />

        <Button
            android:id="@+id/btn_order_delete"
            style="@style/circle_corner_btn_12_mc1_bg"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10px"
            android:text="支付"
            android:textColor="@color/white"
            android:textSize="@dimen/f3" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>