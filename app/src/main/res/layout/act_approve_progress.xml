<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="@color/main_background_color"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/main"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <com.echoesnet.eatandmeet.views.widgets.TopBarSwich.TopBarSwitch
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:topbarType="TEXT"
        ></com.echoesnet.eatandmeet.views.widgets.TopBarSwich.TopBarSwitch>

    <RelativeLayout
        android:id="@+id/rl_balance_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="1dp"
        android:paddingLeft="12dp"
        android:paddingRight="22dp"
        android:background="@color/white"
        >
       <RelativeLayout
           android:layout_width="300dp"
           android:layout_centerInParent="true"
           android:layout_height="60dp">

           <View
               android:layout_width="270dp"
               android:layout_height="1dp"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="19dp"
               android:background="@color/C0332"></View>

          <ImageView
              android:id="@+id/iv_1"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"/>

           <ImageView
               android:id="@+id/iv_2"
               android:layout_centerInParent="true"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"/>
           <ImageView
               android:id="@+id/iv_3"
               android:layout_alignParentRight="true"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"/>

       </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/C0332"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_1"
                android:visibility="gone"
            android:layout_width="wrap_content"
                android:textSize="@dimen/f3"
                android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_2"
                android:visibility="gone"
                android:textSize="@dimen/f3"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_3"
                android:textSize="@dimen/f3"
                android:textColor="@color/C0315"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_4_1"
                    android:visibility="gone"
                    android:textSize="@dimen/f3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_4_2"
                    android:visibility="gone"
                    android:textColor="@color/C0313"
                    android:textSize="@dimen/f3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_4_3"
                    android:textSize="@dimen/f3"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text=""
        android:layout_height="wrap_content"/>
    



    </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         
         <Button
             android:id="@+id/bt_submit"
             android:layout_width="275dp"
             android:text="重新上传"
             android:textSize="@dimen/f1"
             android:textColor="@color/white"
             android:layout_centerHorizontal="true"
             android:layout_alignParentBottom="true"
             android:layout_marginBottom="50dp"
             android:visibility="gone"
             android:background="@drawable/round_btn_c0412_bg"
             android:layout_height="44dp"/>

         <LinearLayout
             android:id="@+id/phone_layout"
             android:layout_width="wrap_content"
             android:layout_centerHorizontal="true"
             android:visibility="gone"
             android:layout_alignParentBottom="true"
             android:layout_marginBottom="20dp"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="wrap_content"
                 android:text="客服电话: "
                 android:textSize="@dimen/f3"
                 android:layout_height="wrap_content"/>
             <TextView
                 android:id="@+id/tv_phone"
                 android:layout_width="wrap_content"
                 android:text="022-24468693"
                 android:textSize="@dimen/f3"
                 android:textColor="@color/C0412"
                 android:layout_height="wrap_content"/>


         </LinearLayout>
         
     </RelativeLayout>
</LinearLayout>