<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	android:id="@+id/arl_top"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/white"
	android:orientation="vertical">
	<com.zhy.autolayout.AutoRelativeLayout
		android:layout_width="match_parent"
		android:layout_height="88px"
		android:background="@color/white"
		android:gravity="center_vertical"
	>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="24px"
			android:text="选择地区"
			android:textColor="@color/C0321"
			android:textSize="@dimen/f3"/>
		<Button
			android:id="@+id/set_address"
			style="@style/round_corner_btn_MC0312_bg"
			android:layout_width="120px"
			android:layout_height="60px"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="24px"
			android:text="确定"
			android:textColor="@color/white"
			android:textSize="@dimen/f3"/>
	</com.zhy.autolayout.AutoRelativeLayout>
	<com.zhy.autolayout.AutoLinearLayout
		android:id="@+id/all_body"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:orientation="horizontal">
		<com.echoesnet.eatandmeet.views.widgets.cascadeWheelView.WheelView
			android:id="@+id/wv_province"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
		<com.echoesnet.eatandmeet.views.widgets.cascadeWheelView.WheelView
			android:id="@+id/wv_city"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
		<com.echoesnet.eatandmeet.views.widgets.cascadeWheelView.WheelView
			android:id="@+id/wv_square"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
		<com.echoesnet.eatandmeet.views.widgets.cascadeWheelView.WheelView
			android:id="@+id/wv_road"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
	</com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>