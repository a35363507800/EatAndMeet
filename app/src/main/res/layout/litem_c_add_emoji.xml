<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="68dp"
	android:orientation="vertical"
	android:background="@color/white"
	android:paddingLeft="12dp"
	android:paddingRight="12dp">
	<com.makeramen.roundedimageview.RoundedImageView
		android:id="@+id/rdv_u_img"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_marginLeft="12dp"
		android:layout_centerVertical="true"
		android:scaleType="centerCrop"
		android:src="@color/MC5"
		app:riv_oval="false"/>
	<TextView
		android:id="@+id/tv_u_nickName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/rdv_u_img"
		android:textSize="@dimen/f3"
		android:textColor="@color/FC1"
		android:layout_marginLeft="12dp"
		android:layout_marginTop="14dp"/>
	<TextView
		android:id="@+id/tv_u_phone_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/tv_u_nickName"
		android:layout_toRightOf="@id/rdv_u_img"
		android:textSize="@dimen/f4"
		android:textColor="@color/FC2"
		android:layout_marginLeft="12dp"
		android:layout_marginTop="8dp"/>
	<Button
		android:id="@+id/btn_operate"
		android:layout_width="90dp"
		android:layout_height="36dp"
		android:layout_alignParentRight="true"
		android:layout_marginRight="12dp"
		android:layout_centerVertical="true"
		android:textColor="@color/MC7"
		android:textSize="@dimen/f4"
		android:text="下 载"
		android:background="@drawable/round_cornor_18_mc7_bg"/>

</RelativeLayout>