<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/user_want_to_go_edit_act"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/FC5"
	android:orientation="vertical"
	android:weightSum="1"
	tools:context="com.echoesnet.eatandmeet.activities.UserWantToGoEditAct">
	<include
		android:id="@+id/top_bar"
		layout="@layout/topbar_template"/>
	<com.zhy.autolayout.AutoRelativeLayout
		android:id="@+id/arl_go_time"
		android:layout_width="match_parent"
		android:layout_height="47dp"
		android:background="@color/white"
		android:paddingLeft="24px"
		android:paddingRight="24px">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:text="出发时间"
			android:textColor="@color/FC2"
			android:textSize="@dimen/f3"
		    />
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true">
			<TextView
				android:id="@+id/tv_go_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginRight="10px"
				android:layout_toLeftOf="@+id/itv_clear_host"
				android:hint="请选择时间"
				android:textColor="@color/FC2"
				android:textSize="@dimen/f3"/>

			<com.joanzapata.iconify.widget.IconTextView
				android:id="@+id/itv_clear_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="10px"
				android:layout_marginRight="20px"
				android:text="{eam-s-close-circle}"
				android:textColor="@color/c10"
				android:textSize="@dimen/f3"
				android:visibility="gone"/>

			<com.joanzapata.iconify.widget.IconTextView
				android:id="@+id/iv_more_want_to_go"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:gravity="center_vertical"
				android:text="{eam-e909}"
				android:textColor="@color/c10"
				android:textSize="@dimen/f3"/>
		</com.zhy.autolayout.AutoLinearLayout>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:layout_alignParentBottom="true"/>
	</com.zhy.autolayout.AutoRelativeLayout>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:layout_marginLeft="24px"
		android:layout_marginRight="24px"
		android:background="@color/FC7"/>
	<com.zhy.autolayout.AutoLinearLayout
		android:id="@+id/arl_go_where"
		android:layout_width="match_parent"
		android:layout_height="93px"
		android:background="@color/white"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingLeft="24px"
		android:paddingRight="24px">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:text="目  的  地"
			android:textColor="@color/FC2"
			android:textSize="@dimen/f3"/>
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
		    android:orientation="horizontal">
			<TextView
				android:id="@+id/tv_res_name"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginRight="10px"
				android:layout_marginLeft="10px"
				android:gravity="right"
				android:hint="请输入您要去的餐厅"
				android:textColor="@color/FC2"
				android:textColorHint="@color/FC3"
				android:maxLines="1"
				android:ellipsize="end"
				android:textSize="@dimen/f3"/>
			<com.joanzapata.iconify.widget.IconTextView
				android:id="@+id/itv_clear_res"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10px"
				android:layout_marginRight="20px"
				android:text="{eam-s-close-circle}"
				android:textColor="@color/c10"
				android:textSize="@dimen/f3"
				android:visibility="gone"/>

			<com.joanzapata.iconify.widget.IconTextView
				android:id="@+id/itv_go"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:text="{eam-e909}"
				android:textColor="@color/c10"
				android:textSize="@dimen/f3"/>
		</com.zhy.autolayout.AutoLinearLayout>
	</com.zhy.autolayout.AutoLinearLayout>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:layout_alignParentBottom="true"/>
</LinearLayout>
