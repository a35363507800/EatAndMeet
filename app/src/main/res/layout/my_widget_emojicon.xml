<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/ll_face_container"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="238dp"
				android:background="@color/C0333"
				android:orientation="vertical">
	<com.echoesnet.eatandmeet.views.widgets.chat.EmojiPageView
		android:id="@+id/pager_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@+id/tab_bar"
		android:layout_weight="1"
	/>
	<com.echoesnet.eatandmeet.views.widgets.chat.EmojiIndicatorView
		android:id="@+id/cpi_pager_indicator"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/tab_bar"
		android:layout_marginBottom="8dp"/>

	<com.echoesnet.eatandmeet.views.widgets.chat.EmojiScrollTabBar
		android:id="@+id/tab_bar"
		android:layout_width="match_parent"
		android:layout_height="44dp"
		android:layout_alignParentBottom="true"
	/>

</RelativeLayout>