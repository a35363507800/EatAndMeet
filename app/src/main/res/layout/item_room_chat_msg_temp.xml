
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:RoundedImageView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="42dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_head"
        android:layout_width="32dp"
        android:layout_height="42dp"
        RoundedImageView:riv_corner_radius_top_left="5dp"
        RoundedImageView:riv_corner_radius_bottom_left="5dp"
        RoundedImageView:riv_corner_radius_top_right="0dp"
        RoundedImageView:riv_corner_radius_bottom_right="0dp"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:id="@+id/item_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_head"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@drawable/shape_room_chat_item_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:textColor="@color/FC1"
                android:textSize="12sp"
                android:text="昵称"/>
            <TextView
                android:id="@+id/item_lvl"
                android:layout_width="29dp"
                android:layout_height="12dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="123"
                android:textColor="@android:color/white"
                android:textSize="9sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxWidth="260dp"
            android:textColor="@color/FC1"
            android:textSize="14sp"
            android:text="内容"/>
    </LinearLayout>
</RelativeLayout>