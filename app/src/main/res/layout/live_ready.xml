<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
	android:id="@+id/live_ready"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.echoesnet.eatandmeet.activities.live.LiveReadyActivity">
	<ScrollView android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_alignParentStart="true"
				android:background="@color/translucent"
				android:scrollbars="none">
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center|top"
			android:orientation="vertical">
			<com.echoesnet.eatandmeet.views.widgets.TopBarSwich.TopBarSwitch
				android:id="@+id/top_bar_switch"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:topbarType="TEXT"/>

			<com.zhy.autolayout.AutoRelativeLayout
				android:id="@+id/iv_addCover"
				android:layout_width="240px"
				android:layout_height="240px"
				android:layout_marginTop="144px"
				android:gravity="center">
				<com.zhy.autolayout.AutoLinearLayout
					android:id="@+id/btn_set_live_cover"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@drawable/input_bg_say_hello"
					android:gravity="center"
					android:orientation="vertical">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:alpha="1"
						android:text="+"
						android:textColor="@color/white"
						android:textSize="72px"
					/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="添加封面"
						android:textColor="@color/white"
						android:textSize="@dimen/f1"/>
				</com.zhy.autolayout.AutoLinearLayout>
				<com.makeramen.roundedimageview.RoundedImageView
					android:id="@+id/iv_cover"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					app:riv_corner_radius="10px"
				/>
			</com.zhy.autolayout.AutoRelativeLayout>
			<com.echoesnet.eatandmeet.views.widgets.MaxByteLengthEditText
				android:id="@+id/et_roomName"
				android:layout_width="180dp"
				android:layout_height="wrap_content"
				android:layout_alignBottom="@id/top_bar_switch"
				android:layout_marginTop="80px"
				android:background="@color/transparent"
				android:hint="# 给直播间写个标题吧 #"
				android:maxLength="15"
				android:singleLine="true"
				android:textColor="@color/white"
				android:textColorHint="@color/white"
				android:textSize="@dimen/f1"/>
			<com.zhy.autolayout.AutoLinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="100px"
				android:gravity="center">
				<TextView
					android:id="@+id/appointment_time"
					style="@style/circle_corner_btn_36_white_bg"
					android:layout_width="260px"
					android:layout_height="88px"
					android:background="@drawable/bg_sendlive"
					android:ellipsize="marquee"
					android:gravity="center"
					android:marqueeRepeatLimit="marquee_forever"
					android:singleLine="true"
					android:text="可约会时间"
					android:textColor="@color/white"
					android:textSize="@dimen/f3"/>
				<TextView
					android:id="@+id/resident_location"
					style="@style/circle_corner_btn_36_white_bg"
					android:layout_width="260px"
					android:layout_height="88px"
					android:layout_marginLeft="30px"
					android:background="@drawable/bg_sendlive"
					android:ellipsize="marquee"
					android:gravity="center"
					android:marqueeRepeatLimit="marquee_forever"
					android:singleLine="true"
					android:text="常驻位置"
					android:textColor="@color/white"
					android:textSize="@dimen/f3"/>

			</com.zhy.autolayout.AutoLinearLayout>
			<View
				android:layout_width="550px"
				android:layout_height="1px"
				android:layout_marginTop="70px"
				android:background="@color/white"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="36px"
				android:text="分享到"
				android:textColor="@color/white"
				android:textSize="@dimen/f2"/>
			<HorizontalScrollView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="50dp"
				android:layout_marginRight="50dp"
				android:layout_marginTop="64px"
				android:scrollbars="none">
				<LinearLayout android:layout_width="wrap_content"
							  android:layout_height="wrap_content"
							  android:orientation="horizontal">
					<CheckBox
						android:id="@+id/iv_shared_to_friend"
						android:layout_width="44dp"
						android:layout_height="44dp"
						android:background="@drawable/live_shared_to_friend"
						android:button="@null"/>
					<CheckBox
						android:id="@+id/iv_shared_to_weChatFriend"
						android:layout_width="44dp"
						android:layout_height="44dp"
						android:layout_marginLeft="17dp"
						android:background="@drawable/live_shared_to_wechat_friend_selector"
						android:button="@null"/>
					<CheckBox
						android:id="@+id/iv_shared_to_weChatMoments"
						android:layout_width="44dp"
						android:layout_height="44dp"
						android:layout_marginLeft="17dp"
						android:background="@drawable/live_shared_to_wechat_moment_selector"
						android:button="@null"
						android:checked="true"/>
					<CheckBox
						android:id="@+id/iv_shared_to_sina"
						android:layout_width="44dp"
						android:layout_height="44dp"
						android:layout_marginLeft="17dp"
						android:background="@drawable/live_shared_to_sina"
						android:button="@null"/>
					<CheckBox
						android:id="@+id/iv_shared_to_QQ"
						android:layout_width="44dp"
						android:layout_height="44dp"
						android:layout_marginLeft="17dp"
						android:background="@drawable/live_shared_to_qq_selector"
						android:button="@null"/>
					<CheckBox
						android:id="@+id/iv_shared_to_QZone"
						android:layout_width="44dp"
						android:layout_height="44dp"
						android:layout_marginLeft="17dp"
						android:background="@drawable/live_shared_to_qzone_selector"
						android:button="@null"/>
				</LinearLayout>
			</HorizontalScrollView>


			<Button
				android:id="@+id/live_start"
				style="@style/circle_corner_btn_36_mc2_bg"
				android:layout_width="550px"
				android:layout_height="88px"
				android:layout_marginTop="60px"
				android:text="直 播"
				android:textColor="@color/FC1"
				android:textSize="@dimen/f1"/>
		</com.zhy.autolayout.AutoLinearLayout>
	</ScrollView>

	<RelativeLayout
		android:id="@+id/rlPopCover"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/translucent"
		android:visibility="gone"/>
</com.zhy.autolayout.AutoRelativeLayout>
