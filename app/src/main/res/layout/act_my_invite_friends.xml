<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	android:id="@+id/main"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" xmlns:tool="http://schemas.android.com/tools">

	<com.echoesnet.eatandmeet.views.widgets.TopBarSwich.TopBarSwitch
		android:id="@+id/top_bar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:topbarType="TEXT"/>

	<com.echoesnet.eatandmeet.views.widgets.MyScrollView
		android:id="@+id/invite_scroll"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#fcb212"
		android:scrollbars="none"
	>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="52dp"
				android:src="@drawable/invite_title_bg"
				android:translationZ="1dp"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="13dp"
				android:layout_marginRight="13dp"
				android:layout_marginTop="-27dp"
				android:background="@drawable/shape_round_invite_4_4r"
				android:gravity="center"
				android:orientation="vertical">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="25dp"
					android:background="@drawable/invite_title"
					android:gravity="center"
					android:text="您的邀请码"
					android:textColor="@color/C0321"
					android:textSize="@dimen/f3"/>
				<TextView
					android:id="@+id/tv_invite_num"
					android:layout_width="280dp"
					android:layout_height="42dp"
					android:layout_marginTop="20dp"
					android:background="#33916c06"
					android:gravity="center"
					tool:text="SD47AC"
					android:textColor="#fff4d8"
					android:textSize="25sp"/>
				<Button
					android:id="@+id/btn_invite_now"
					android:layout_width="287dp"
					android:layout_height="47dp"
					android:layout_marginBottom="28dp"
					android:layout_marginTop="30dp"
					android:background="@drawable/invite_button"
					android:gravity="center"
					android:paddingBottom="6dp"
					android:text="邀请小伙伴，一起赢好礼！ ＞＞"
					android:textColor="#fff4d8"
					android:textSize="@dimen/f3"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/ll_user_list"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="13dp"
				android:layout_marginRight="13dp"
				android:layout_marginTop="12dp"
				android:background="@drawable/shape_round_invite_4_4r"
				android:gravity="center"
				android:orientation="vertical"
				android:visibility="visible">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="25dp"
					android:background="@drawable/invite_title"
					android:gravity="center"
					android:text="邀请名单"
					android:textColor="@color/C0321"
					android:textSize="@dimen/f3"/>
				<LinearLayout android:layout_width="match_parent"
							  android:layout_height="wrap_content"
							  android:layout_marginBottom="28dp"
							  android:layout_marginLeft="15dp"
							  android:layout_marginRight="15dp"
							  android:layout_marginTop="23dp"
							  android:background="@drawable/shape_round_invite_4_user"
							  android:orientation="vertical">
					<com.zhy.autolayout.AutoLinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="21dp"
						android:layout_marginRight="21dp"
						android:layout_marginTop="10dp"
						android:gravity="center"
						android:orientation="horizontal">
						<com.zhy.autolayout.AutoLinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="center">
							<TextView android:layout_width="wrap_content"
									  android:layout_height="wrap_content"
									  android:text="昵称"
									  android:textColor="@color/C0321"
									  android:textSize="@dimen/f3"/>
						</com.zhy.autolayout.AutoLinearLayout>
						<com.zhy.autolayout.AutoLinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="center"
							android:visibility="gone">
							<TextView android:layout_width="wrap_content"
									  android:layout_height="wrap_content"
									  android:text="获得奖励"
									  android:textColor="@color/C0321"
									  android:textSize="@dimen/f3"/>
						</com.zhy.autolayout.AutoLinearLayout>
						<com.zhy.autolayout.AutoLinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:gravity="center">
							<TextView android:layout_width="wrap_content"
									  android:layout_height="wrap_content"
									  android:text="注册时间"
									  android:textColor="@color/C0321"
									  android:textSize="@dimen/f3"/>
						</com.zhy.autolayout.AutoLinearLayout>
					</com.zhy.autolayout.AutoLinearLayout>
					<TextView android:layout_width="match_parent"
							  android:layout_height="1dp"
							  android:layout_marginLeft="18dp"
							  android:layout_marginRight="18dp"
							  android:layout_marginTop="12dp"
							  android:background="@drawable/invite_line"/>
					<android.support.v7.widget.RecyclerView
						android:id="@+id/lv_invite_friends"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_marginBottom="21dp"
						android:layout_marginLeft="21dp"
						android:layout_marginRight="21dp"
						android:layout_marginTop="17dp"
						android:divider="@null"
						android:listSelector="@android:color/transparent"
						android:orientation="vertical"
						android:scrollbars="none"/>
				</LinearLayout>
			</LinearLayout>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="22dp"
				android:layout_marginLeft="22dp"
				android:layout_marginRight="22dp"
				android:layout_marginTop="16dp"
				android:lineSpacingExtra="6dp"
				android:text="@string/invite_friend_content"
				android:textColor="#B2681b1b"
				android:textSize="14sp"/>
		</LinearLayout>
	</com.echoesnet.eatandmeet.views.widgets.MyScrollView>

</com.zhy.autolayout.AutoLinearLayout>
