<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context="com.echoesnet.eatandmeet.activities.SelectTableZoomAct"
    android:background="@color/c4">
    <com.echoesnet.eatandmeet.views.widgets.selectTableView.SelectTableView
        android:id="@+id/st_st_zoom_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:enableScale="true"/>
    <Button
        android:id="@+id/btn_st_zoom_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_close"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="28dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/tv_select_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/f3"
            android:gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:paddingLeft="10dp"
            tools:text="已选：1号桌（4人）5号桌（2人）"
            android:background="@drawable/squre_bg"/>
        <Button
            android:id="@+id/btn_select_floor"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="@dimen/f3"
            android:gravity="center"
            android:text="1F"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/squre_bg"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/all_floor_container"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:background="@drawable/res_floors_small"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="65dp"
        android:visibility="gone">
        <ListView
            android:id="@+id/lv_floors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@color/transparent"
            android:divider="@color/transparent"/>
    </LinearLayout>
</RelativeLayout>
