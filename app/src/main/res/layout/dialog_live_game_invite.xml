<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/ll_switch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:gravity="bottom"
    android:layout_marginBottom="-7dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/img_switch_1"
        android:layout_width="116dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/text_live_on"
        android:background="@drawable/btn_label_on"/>
    <ImageView
        android:id="@+id/img_switch_2"
        android:layout_width="116dp"
        android:layout_height="38dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="12dp"
        android:paddingBottom="13dp"
        android:scaleType="centerCrop"
        android:src="@drawable/text_invite_off"
        android:background="@drawable/btn_label_off"/>
</LinearLayout>
    <RelativeLayout
        android:id="@+id/ll_invite"
        android:layout_width="320dp"
        android:layout_height="340dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="@drawable/bg_panel">
        <com.echoesnet.eatandmeet.views.EmptyRecyclerView
            android:id="@+id/rv_invite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rl_send_invite"
            android:layout_weight="1"/>
        <com.echoesnet.eatandmeet.views.EmptyRecyclerView
            android:id="@+id/rv_invited"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_weight="1"/>
        <RelativeLayout
            android:id="@+id/rl_send_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">
            <LinearLayout
                android:id="@+id/fl_send_invite"
                android:layout_width="125dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_main_off">
                <ImageView
                    android:id="@+id/img_send_invite"
                    android:layout_width="66dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    android:src="@drawable/text_send_invitation_off"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/img_cancel"
                android:layout_width="34dp"
                android:layout_height="16dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/text_cancel"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/img_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:src="@drawable/bg_empty"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_start"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_panel">
            <ImageView
                android:id="@+id/img_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_title"/>
            <TextView
                android:id="@+id/tv_current_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_title"
                android:gravity="center"
                android:textSize="@dimen/f3"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_total_face_egg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_current_num"
                android:gravity="center"
                android:textSize="@dimen/f3"
                android:textColor="@color/white"/>
            <LinearLayout
                android:id="@+id/fl_start"
                android:layout_width="125dp"
                android:layout_height="42dp"
                android:layout_marginTop="26dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tv_total_face_egg"
                android:background="@drawable/btn_invite_main">
                <ImageView
                    android:id="@+id/img_start"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/text_start"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textSize="@dimen/f2"
                    android:textColor="#6E658C"
                    android:text=""/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_surplus_face_egg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/f3"
                android:textColor="@color/white"
                android:layout_marginTop="26dp"
                android:layout_below="@+id/fl_start"
                android:text="剩余脸蛋:"/>
            <ImageView
                android:id="@+id/img_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl_start"
                android:layout_marginTop="26dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/btn_rule"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/btn_start_game_close"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_rule"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_panel">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:src="@drawable/bg_relation"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/bg_interface"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:lines="1"
                android:textColor="@color/C0312"
                android:text="正确调整克制关系增加得分，赢得胜利"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_rule_close"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/btn_start_game_close"/>
    </RelativeLayout>
</LinearLayout>