<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:orientation="vertical"
>
	<com.zhy.autolayout.AutoLinearLayout
		android:id="@+id/ll_all"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10px"
		android:layout_marginLeft="24px"
		android:layout_marginTop="10px"
		android:gravity="center_vertical"
		android:orientation="horizontal"
	>
		<com.echoesnet.eatandmeet.views.widgets.LevelHeaderView
			android:id="@+id/ri_focus"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_centerVertical="true"/>
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="30px"
			android:orientation="vertical"
			app:riv_corner_radius="8px"
		>
			<com.zhy.autolayout.AutoLinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical">

				<com.echoesnet.eatandmeet.views.widgets.LevelView
					android:id="@+id/level_view"
					android:layout_width="62px"
					android:layout_height="30px"
					android:layout_gravity="center_vertical"
				/>
				<com.joanzapata.iconify.widget.IconTextView
					android:id="@+id/tv_fans_age"
					android:layout_marginLeft="10px"
					android:layout_gravity="center_vertical"
					android:layout_width="62px"
					android:layout_height="30px"
					android:gravity="center"
					android:text="{eam-e94f @color/white @dimen/f5}"
					android:textColor="@color/white"
					android:textSize="@dimen/f5"/>
				<TextView
					android:layout_marginLeft="16px"
					android:id="@+id/tv_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="张三"
					android:textColor="@color/FC1"
					android:textSize="@dimen/f3"/>

			</com.zhy.autolayout.AutoLinearLayout>
			<com.zhy.autolayout.AutoLinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginTop="10px">

				<com.joanzapata.iconify.widget.IconTextView
					android:id="@+id/tv_add_focus"
					android:layout_width="112px"
					android:layout_height="40px"
					android:layout_gravity="center_vertical"
					android:gravity="center"
					android:textColor="@color/white"
					android:textSize="@dimen/f5" />
			</com.zhy.autolayout.AutoLinearLayout>

		</com.zhy.autolayout.AutoLinearLayout>

		<View
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1" />
		<!--<View android:layout_width="wrap_content"-->
			  <!--android:layout_height="wrap_content"-->
			  <!--android:layout_weight="1"/>-->
		<com.zhy.autolayout.AutoLinearLayout
			android:id="@+id/ll_inLive"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="24px"
			android:gravity="center_vertical"
		>
			<com.joanzapata.iconify.widget.IconTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="{eam-e9ab @color/MC1 @dimen/f3}"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10px"
				android:text="直播中"
				android:textColor="@color/MC3"
				android:textSize="@dimen/f3"/>
		</com.zhy.autolayout.AutoLinearLayout>
	</com.zhy.autolayout.AutoLinearLayout>
	<View
		style="@style/line_vertical"
		android:layout_width="match_parent"
		android:layout_marginLeft="24px"
	/>
</com.zhy.autolayout.AutoLinearLayout>