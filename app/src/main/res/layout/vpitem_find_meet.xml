<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/maskView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:descendantFocusability="blocksDescendants"
		android:orientation="vertical">
		<!--图片-->
		<FrameLayout
			android:id="@+id/card_top_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/top">
			<com.makeramen.roundedimageview.RoundedImageView
				android:id="@+id/iv_find_meet_img"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_gravity="center_horizontal"
				android:scaleType="centerCrop"
				app:riv_corner_radius_top_left="20px"
				app:riv_corner_radius_top_right="20px"/>
			<TextView
				android:id="@+id/tv_find_living"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="12dp"
				android:layout_marginTop="10dp"
				android:text="直播中"
				android:paddingRight="5dp"
				android:paddingLeft="5dp"
				android:paddingTop="4dp"
				android:paddingBottom="4dp"
				android:textColor="@color/white"
				android:background="@drawable/round_cornor_36_mc1_bg"
				android:textSize="@dimen/f4"
				android:visibility="gone"/>
			<!--餐厅信息-->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="12dp"
				android:paddingRight="15dp"
				android:layout_marginTop="15dp"
				android:background="@drawable/wenxiang_bg_xxhdpi"
				android:layout_gravity="bottom"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<com.joanzapata.iconify.widget.IconTextView
					android:id="@+id/last_chuxian"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="{eam-s-location2} 上次出现过"
					android:textColor="@color/white"
					android:textSize="@dimen/f3"/>
				<TextView
					android:id="@+id/tv_find_meet_old_orders"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:layout_weight="1"
					android:ellipsize="marquee"
					android:focusable="true"
					android:focusableInTouchMode="true"
					android:marqueeRepeatLimit="marquee_forever"
					android:scrollHorizontally="true"
					android:singleLine="true"
					android:textColor="@color/MC2"
					android:textSize="@dimen/f3"/>
			</LinearLayout>
		</FrameLayout>
		<LinearLayout
			android:id="@+id/card_bottom_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/bottom"
			android:orientation="vertical">
			<!--个人信息-->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="15dp"
				android:layout_marginTop="15dp"
				android:paddingBottom="12dp"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/tv_find_meet_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/FC1"
					android:textSize="@dimen/f3"/>
				<com.joanzapata.iconify.widget.IconTextView
					android:id="@+id/tv_find_meet_gender"
					android:layout_width="35dp"
					android:layout_height="15dp"
					android:layout_marginLeft="8dp"
					android:gravity="center"
					android:layout_gravity="center_vertical"
					android:textColor="@color/white"
					android:textSize="@dimen/f5"
					android:background="@drawable/shape_round_2corner_15_mc5"/>
				<TextView android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1"/>
				<TextView
					android:id="@+id/tv_find_meet_city"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/FC3"
					android:textSize="@dimen/f3" />
			</LinearLayout>
		</LinearLayout>

	</LinearLayout>
</LinearLayout>