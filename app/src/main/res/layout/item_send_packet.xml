<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/llMsgItemGroup"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:gravity="bottom"
        android:minHeight="22dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.echoesnet.eatandmeet.views.widgets.LevelView
                android:id="@+id/level_view"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_marginBottom="3dp"
                android:layout_alignBottom="@+id/tvSender"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tvSender"
                android:layout_toRightOf="@+id/level_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:layout_alignParentBottom="true"
                android:lines="1"
                android:maxEms="7"
                android:textSize="@dimen/f2"
                tools:text="谁发的-》" />

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tvSendContent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableRight="@drawable/ico_hongbao"
        android:gravity="bottom"
        android:text="text"
        android:textColor="@color/C0313"
        android:textSize="@dimen/f2"
        tools:text="测试人员发了一个红包" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/ivRedPacket"
        android:layout_width="64dp"
        android:layout_height="49dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_toRightOf="@+id/llMsgItemGroup"
        android:scaleType="fitCenter"
        android:src="@drawable/ico_hongbao" />
</LinearLayout>

