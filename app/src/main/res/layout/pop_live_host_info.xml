<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_gravity="center"
             android:background="@color/transparent"
             android:orientation="vertical"
    >


    <RelativeLayout
        android:id="@+id/rl_all_bg"
        android:layout_width="match_parent"
        android:layout_height="315.5dp"
        android:layout_gravity="center"
        android:background="@color/transparent">


        <RelativeLayout
            android:id="@+id/rl_bg_white"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/review_head_bg">

            <TextView
                android:id="@+id/tv_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:text="举报"
                android:textColor="@color/C0323"
                android:textSize="@dimen/f4"/>

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/itv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:text="{eam-s-close}"
                android:textColor="@color/C0323"
                android:textSize="@dimen/f4"/>

            <LinearLayout
                android:id="@+id/ll_host_name_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itv_close"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_host_nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称七个字"
                    android:textColor="@color/C0321"
                    android:textSize="@dimen/f3"/>

                <com.echoesnet.eatandmeet.views.widgets.GenderView
                    android:id="@+id/itv_sex_age"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_alignBottom="@+id/tv_host_nickName"
                    android:layout_alignTop="@+id/tv_host_nickName"
                    android:layout_marginLeft="10dp"
                  />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_host_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_host_name_info"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:text="ID:451825"
                android:includeFontPadding="false"
                android:textColor="@color/C0323"
                android:textSize="@dimen/f4"/>

            <!--《《认证信息相关》》-->
            <LinearLayout
                android:id="@+id/ll_all_identy_info"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/tv_host_id"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/itv_person_identy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:text="{eam-e9af}"
                    android:textColor="@color/C0412"
                    android:textSize="@dimen/f4"/>

                <TextView
                    android:id="@+id/tv_identy_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="身份已认证"
                    android:textColor="@color/C0412"
                    android:textSize="@dimen/f4"/>

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/itv_phone_identy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="{eam-s-phone}"
                    android:textColor="@color/C0412"
                    android:textSize="@dimen/f4"/>

                <TextView
                    android:id="@+id/tv_phone_word"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="手机已认证"
                    android:textColor="@color/C0412"
                    android:textSize="@dimen/f4"/>
            </LinearLayout>


            <!--《《等级信息相关》》-->
            <LinearLayout
                android:id="@+id/ll_all_info_level"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/ll_all_identy_info"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_level_person"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/iv_host_level"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <!--《《饭票》》-->
            <LinearLayout
                android:id="@+id/ll_num_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_all_info_level"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_fan_piao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_black_bg"
                    android:paddingLeft="6.5dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:paddingRight="6.5dp"
                    android:text=""
                    android:textColor="@color/C0323"
                    android:textSize="@dimen/f4"/>

                <TextView
                    android:id="@+id/tv_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/shape_black_bg"
                    android:paddingLeft="6.5dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:paddingRight="6.5dp"
                    android:text=""
                    android:textColor="@color/C0323"
                    android:textSize="@dimen/f4"/>

                <TextView
                    android:id="@+id/tv_fan_focus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/shape_black_bg"
                    android:paddingLeft="6.5dp"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:paddingRight="6.5dp"
                    android:text=""
                    android:textColor="@color/C0323"
                    android:textSize="@dimen/f4"/>
            </LinearLayout>



            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_below="@+id/ll_num_info"></View>
            <!--《《约炮相关》》-->
            <LinearLayout
                android:id="@+id/ll_yuePao_info"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/view"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:orientation="horizontal"
                android:visibility="visible">
                <TextView
                    android:id="@+id/tv_yue"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_pay_sure_press"
                    android:gravity="center"
                    android:text="+ 约会"
                    android:textColor="@color/C0324"
                    android:textSize="@dimen/f3"/>

                <TextView
                    android:id="@+id/tv_hello"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_pay_sure_press"
                    android:gravity="center"
                    android:text="打招呼"
                    android:textColor="@color/C0324"
                    android:textSize="@dimen/f3"/>

                <TextView
                    android:id="@+id/tv_add_focus_host"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_pay_sure_press"
                    android:gravity="center"
                    android:text="+ 关注"
                    android:textColor="@color/C0324"
                    android:textSize="@dimen/f3"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_centerHorizontal="true">

            <com.echoesnet.eatandmeet.views.CircleTextView
                android:id="@+id/ctv_cicle"
                android:layout_width="81dp"
                android:layout_height="81dp"
                />


            <com.echoesnet.eatandmeet.views.widgets.LevelHeaderView
                android:id="@+id/lhv_head_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                app:riv_oval="true"
                />



        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>