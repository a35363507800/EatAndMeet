<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 填充的颜色 -->
    <solid android:color="@color/MC7" />
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners
        android:bottomLeftRadius="@dimen/cornerRadius"
        android:bottomRightRadius="@dimen/cornerRadius"
        android:topLeftRadius="@dimen/cornerRadius"
        android:topRightRadius="@dimen/cornerRadius" />

    <gradient
        android:angle="270"
        android:centerColor="@color/MC7"
        android:endColor="@color/MC7"
        android:startColor="@color/MC7" />

</shape>