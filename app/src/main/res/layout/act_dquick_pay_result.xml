<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	tools:context="com.echoesnet.eatandmeet.activities.DQuickPayResultAct">
	<include
		android:id="@+id/top_bar"
		layout="@layout/topbar_template"/>
	<com.joanzapata.iconify.widget.IconTextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="130px"
		android:text="{eam-s-smile-face @color/MC5 @dimen/rechargeSuccess}"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="30px"
		android:text="恭喜您，支付成功"
		android:textColor="@color/FC2"
		android:textSize="@dimen/f2"/>
	<Button
		android:id="@+id/btn_check_order"
		style="@style/commonButton3"
		android:layout_width="236px"
		android:layout_height="72px"
		android:layout_below="@+id/tv_title"
		android:layout_centerHorizontal="true"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="30px"
		android:text="查看订单"/>
	<View android:layout_width="match_parent"
			   android:layout_height="30px"
			   android:layout_marginTop="60px"
			   android:background="@drawable/zc_fenge_xhdpi"/>
	<TextView
		android:id="@+id/tv_resname"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="24px"
		android:layout_marginTop="24px"
		android:text="123"
		android:textColor="@color/FC1"
		android:textSize="@dimen/f2"/>
	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="24px"
		android:layout_marginTop="30px">
		<TextView android:layout_width="30px"
				  android:layout_height="match_parent"
				  android:gravity="center"
				  android:text="·"
				  android:textColor="@color/MC1"
				  android:textSize="@dimen/f1"/>
		<TextView android:layout_width="wrap_content"
				  android:layout_height="match_parent"
				  android:gravity="center"
				  android:text="订单号："
				  android:textColor="@color/FC3"
				  android:textSize="@dimen/f3"/>
		<TextView
			android:id="@+id/tv_order_id"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:text="     "
			android:textColor="@color/FC3"
			android:textSize="@dimen/f3"/>
	</com.zhy.autolayout.AutoLinearLayout>
	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="24px"
		android:layout_marginTop="30px">
		<TextView android:layout_width="30px"
				  android:layout_height="match_parent"
				  android:gravity="center"
				  android:text="·"
				  android:textColor="@color/MC1"
				  android:textSize="@dimen/f1"/>
		<TextView android:layout_width="wrap_content"
				  android:layout_height="match_parent"
				  android:gravity="center"
				  android:text="消费金额："
				  android:textColor="@color/FC3"
				  android:textSize="@dimen/f3"/>
		<TextView
			android:id="@+id/tv_consume_amount"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:text="     "
			android:textColor="@color/FC3"
			android:textSize="@dimen/f3"/>
	</com.zhy.autolayout.AutoLinearLayout>
	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="24px"
		android:layout_marginTop="30px">
		<TextView android:layout_width="30px"
				  android:layout_height="match_parent"
				  android:gravity="center"
				  android:text="·"
				  android:textColor="@color/MC1"
				  android:textSize="@dimen/f1"/>
		<TextView android:layout_width="wrap_content"
				  android:layout_height="match_parent"
				  android:gravity="center"
				  android:text="手机号："
				  android:textColor="@color/FC3"
				  android:textSize="@dimen/f3"/>
		<TextView
			android:id="@+id/tv_mobile_num"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:text="     "
			android:textColor="@color/FC3"
			android:textSize="@dimen/f3"/>
	</com.zhy.autolayout.AutoLinearLayout>
	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="24px"
		android:layout_marginTop="30px">
		<TextView android:layout_width="30px"
				  android:layout_height="match_parent"
				  android:gravity="center"
				  android:text="·"
				  android:textColor="@color/MC1"
				  android:textSize="@dimen/f1"/>
		<TextView android:layout_width="wrap_content"
				  android:layout_height="match_parent"
				  android:gravity="center"
				  android:text="消费时间："
				  android:textColor="@color/FC3"
				  android:textSize="@dimen/f3"/>
		<TextView
			android:id="@+id/tv_consume_time"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:text="     "
			android:textColor="@color/FC3"
			android:textSize="@dimen/f3"/>
	</com.zhy.autolayout.AutoLinearLayout>
	<TextView
		android:layout_width="match_parent"
		android:background="@color/main_background_color"
		android:layout_height="20px"/>
	<com.zhy.autolayout.AutoLinearLayout
		android:id="@+id/tui_anchorLayout"
		android:layout_width="match_parent"
		android:layout_height="110px"
		android:layout_marginRight="24px"
		android:layout_marginLeft="24px"
		android:background="@drawable/round_bg_normal"
		android:gravity="center_vertical"
		android:orientation="horizontal">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginLeft="20px"
			android:gravity="center_vertical"
			android:text="推荐顾问："
			android:textColor="@color/FC2"
			android:textSize="@dimen/f3"/>
		<com.makeramen.roundedimageview.RoundedImageView
			android:id="@+id/host_userHeader"
			android:layout_width="72px"
			app:riv_oval="true"
			android:layout_height="72px"/>
		<TextView
			android:id="@+id/host_userName"
			android:layout_width="wrap_content"
			android:text="张三"
			android:textColor="@color/FC1"
			android:layout_marginLeft="20px"
			android:textSize="@dimen/f3"
			android:layout_height="wrap_content"/>
	</com.zhy.autolayout.AutoLinearLayout>
	<View android:layout_width="match_parent"
		  android:layout_height="0dp"
		  android:layout_weight="1"
		  android:background="@color/main_background_color"/>
</com.zhy.autolayout.AutoLinearLayout>
