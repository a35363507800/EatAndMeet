<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<com.zhy.autolayout.AutoRelativeLayout
		android:layout_width="match_parent"
		android:layout_height="88px"
		android:background="@color/white"
		android:gravity="center_vertical"
	>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="24px"
			android:text="选择可约会的时间"
			android:textColor="@color/C0321"
			android:textSize="@dimen/f3"/>
		<Button
			android:id="@+id/btn_ok"
			style="@style/round_corner_btn_MC0312_bg"
			android:layout_width="120px"
			android:layout_height="60px"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="24px"
			android:text="确定"
			android:textColor="@color/white"
			android:textSize="@dimen/f3"/>
	</com.zhy.autolayout.AutoRelativeLayout>

	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="262px"
		android:background="@color/C0333"
		android:gravity="center"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/tv_time_one"
			style="@style/select_appoint_time"
			android:layout_width="140px"
			android:layout_height="140px"
			android:layout_marginLeft="24px"
			android:gravity="center"
			android:text="11:30\n—\n13:30"
		/>
		<View
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
		<TextView
			android:id="@+id/tv_time_two"
			style="@style/select_appoint_time"
			android:layout_width="140px"
			android:layout_height="140px"
			android:gravity="center"
			android:text="17:30\n—\n19:30"
		/>
		<View
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
		<TextView
			android:id="@+id/tv_time_three"
			style="@style/select_appoint_time"
			android:layout_width="140px"
			android:layout_height="140px"
			android:gravity="center"
			android:text="19:30\n—\n00:00"
		/>

		<View
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
		<TextView
			android:id="@+id/tv_time_four"
			style="@style/select_appoint_time"
			android:layout_width="140px"
			android:layout_height="140px"
			android:layout_marginRight="24px"
			android:gravity="center"
			android:text="不接受\n约会"
		/>

	</com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>