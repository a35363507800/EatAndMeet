<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.echoesnet.eatandmeet.activities.CAddNewFriendAct">

    <include
        android:id="@+id/top_bar"
        layout="@layout/topbar_template" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_add_res_accost_friend"
        android:layout_width="match_parent"
        android:layout_height="136px"
        android:background="@drawable/item_click_white_selector"
        android:orientation="vertical"
        android:paddingLeft="24px"
        android:paddingRight="24px">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/rdv_u_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_circle_mc7_bg"
            android:gravity="center"
            android:text="{eam-e975}"
            android:textColor="@color/white"
            android:textSize="60px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:layout_toRightOf="@id/rdv_u_img">

            <TextView
                android:id="@+id/tv_u_nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="餐厅邂逅"
                android:textColor="@color/FC1"
                android:textSize="@dimen/f3" />

            <TextView
                android:id="@+id/tv_u_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_u_nickName"
                android:layout_marginTop="20px"
                android:text="添加附近餐厅的朋友"
                android:textColor="@color/FC3"
                android:textSize="@dimen/f4" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/btn_operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="{eam-e909}"
            android:textColor="@color/FC3"
            android:textSize="@dimen/f3" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/FC7" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_add_contact_friend"
        android:layout_width="match_parent"
        android:layout_height="136px"
        android:background="@drawable/item_click_white_selector"
        android:orientation="vertical"
        android:paddingLeft="24px"
        android:paddingRight="24px">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/rdv_u_img1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_circle_mc5_bg"
            android:gravity="center"
            android:text="{eam-e976}"
            android:textColor="@color/white"
            android:textSize="60px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:layout_toRightOf="@id/rdv_u_img1">

            <TextView
                android:id="@+id/tv_u_nickName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机联系人"
                android:textColor="@color/FC1"
                android:textSize="@dimen/f3" />

            <TextView
                android:id="@+id/tv_u_description1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_u_nickName1"
                android:layout_marginTop="20px"
                android:text="添加通讯录中的朋友"
                android:textColor="@color/FC3"
                android:textSize="@dimen/f4" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/btn_operate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="{eam-e909}"
            android:textColor="@color/FC3"
            android:textSize="@dimen/f3" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/FC7" />
</com.zhy.autolayout.AutoLinearLayout>
