<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:id="@+id/switch_btn_container"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="31dp">
	<RelativeLayout
		android:id="@+id/rl_btn_con"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/tv_1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@+id/tv_bottom"
			android:focusable="true"
			android:textColor="@color/C0321"
			android:textSize="@dimen/f2"
			tools:text="你好"/>
		<TextView
			android:id="@+id/tv_bottom"
			android:layout_width="20dp"
			android:layout_height="2dp"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="5dp"
			android:background="@drawable/switch_btn_selector"/>
	</RelativeLayout>
	<TextView
		android:id="@+id/tv_msg_indicator"
		android:layout_width="wrap_content"
		android:layout_height="14dp"
		android:layout_marginTop="0dp"
		android:layout_toRightOf="@id/rl_btn_con"
		android:background="@drawable/shape_circle_c0319_bg"
		android:gravity="center"
		android:minWidth="14dp"
		android:paddingLeft="3dp"
		android:paddingRight="3dp"
		android:textColor="@color/C0324"
		android:textSize="@dimen/f6"
		tools:text="9"
		android:visibility="invisible"/>
	<TextView
		android:id="@+id/tv_msg_indicator2"
		android:layout_width="8dp"
		android:layout_height="8dp"
		android:layout_marginTop="2dp"
		android:layout_toRightOf="@id/rl_btn_con"
		android:background="@drawable/shape_circle_c0319_bg"
		android:visibility="invisible"/>
</RelativeLayout>
