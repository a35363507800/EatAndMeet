<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/blackT20"
	android:gravity="center"
	android:orientation="vertical">
	<RelativeLayout
		android:id="@+id/rel_container"
		android:layout_width="wrap_content"
		android:layout_height="80dp">
		<com.echoesnet.eatandmeet.views.widgets.LevelHeaderView
			android:id="@+id/level_invite_header_view"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_alignParentBottom="true"
			app:level_ril_icon="false"
			app:live_state="false"/>
		<LinearLayout
			android:id="@+id/rl_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_above="@+id/tv_nick_name"
			android:layout_centerVertical="true"
			android:layout_marginLeft="15dp"
			android:layout_toRightOf="@id/level_invite_header_view"
			android:orientation="horizontal">
			<com.echoesnet.eatandmeet.views.widgets.GenderView
				android:id="@+id/tv_connect_age"
				android:layout_width="wrap_content"
				android:layout_height="12dp"
				android:layout_marginLeft="3dp"
				android:gravity="center"
				android:textColor="@color/C0324"
				android:textSize="@dimen/f6"/>
			<com.echoesnet.eatandmeet.views.widgets.LevelView
				android:id="@+id/invite_level_view"
				android:layout_width="wrap_content"
				android:layout_height="12dp"
				android:layout_marginLeft="5dp"
				app:text_size="@dimen/f6"/>
		</LinearLayout>
		<TextView
			android:id="@+id/tv_nick_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@+id/level_invite_header_view"
			android:layout_alignLeft="@id/rl_container"
			android:layout_marginTop="7dp"
			android:text="nicName"
			android:textColor="@color/white"/>
	</RelativeLayout>
	<TextView
		android:id="@+id/tv_invite_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/rel_container"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="67dp"
		android:text="邀请连麦"
		android:textColor="@color/C0314"
		android:textSize="@dimen/f1"/>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/tv_invite_text"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="67dp">
		<Button
			android:id="@+id/btn_refuse"
			android:layout_width="130dp"
			android:layout_height="44dp"
			android:background="@drawable/round_white_bg_live_connect"
			android:text="拒绝"
			android:textColor="@color/white"
			android:textSize="@dimen/f2"/>
		<Button
			android:id="@+id/btn_accept"
			android:layout_width="130dp"
			android:layout_height="44dp"
			android:layout_marginLeft="15dp"
			android:background="@drawable/round_c0313_bg_live_connect"
			android:text="接受"
			android:textColor="@color/C0313"
			android:textSize="@dimen/f2"/>
	</LinearLayout>
</LinearLayout>