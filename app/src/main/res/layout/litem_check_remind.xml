<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_order_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/my_order_bg_zi"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="20px">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20px"
        android:paddingBottom="20px">

        <TextView
            android:id="@+id/tv_name_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="审核提醒"
            android:textColor="@color/FC1"
            android:textSize="@dimen/f3" />

        <TextView
            android:id="@+id/tv_time_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/FC2"
            android:textSize="@dimen/f3" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c5" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_check_state_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的实名认证审核状态(已通过、未通过)"
            android:textColor="@color/FC2"
            android:textSize="@dimen/f3" />


    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_check_show"
            android:layout_width="658px"
            android:layout_height="78px"
            android:scaleType="centerCrop"
            android:src="@drawable/wd_shenheok"/>
        <TextView
            android:id="@+id/tv_check_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未通过原因: 身份证照片不清晰"
            android:textColor="@color/MC5"
            android:textSize="@dimen/f3"/>

    </com.zhy.autolayout.AutoLinearLayout>




</com.zhy.autolayout.AutoLinearLayout>