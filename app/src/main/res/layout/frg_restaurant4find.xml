<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/pull_to_refresh_sv_res"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.echoesnet.eatandmeet.views.widgets.ImageIndicatorView.NetworkImageIndicatorView
                android:id="@+id/icv_cycle_view_res"
                android:layout_width="match_parent"
                android:layout_height="180px" />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/itv_today_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24px"
                    android:layout_marginLeft="24px"
                    android:layout_marginTop="24px"
                    android:layout_marginRight="10px"
                    android:text="{eam-e9be}"
                    android:textColor="@color/C0411"
                    android:textSize="@dimen/f4" />

                <TextView
                    android:id="@+id/tv_today_recommend_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/C0321"
                    android:text="@string/today_recommend"
                    android:textSize="@dimen/f4" />
            </com.zhy.autolayout.AutoLinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_today_recommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="30px"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/C0333"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/itv_recently_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18px"
                    android:layout_marginLeft="24px"
                    android:layout_marginTop="24px"
                    android:layout_marginRight="10px"
                    android:text="{eam-e995}"
                    android:textColor="@color/C0312"
                    android:textSize="@dimen/f3" />

                <TextView
                    android:id="@+id/tv_recently_in_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/C0321"
                    android:layout_marginBottom="18px"
                    android:layout_marginLeft="24px"
                    android:layout_marginTop="24px"
                    android:layout_marginRight="10px"
                    android:text="@string/recently_in"
                    android:textSize="@dimen/f4" />
            </com.zhy.autolayout.AutoLinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_recently_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="6px"
                    android:paddingLeft="6px"
                    android:paddingBottom="24px"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/C0333"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</com.zhy.autolayout.AutoLinearLayout>