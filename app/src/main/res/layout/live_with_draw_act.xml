<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/live_with_draw_act"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/main_background_color"
	android:orientation="vertical"
	tools:context="com.echoesnet.eatandmeet.activities.live.LiveWithDrawActivity">
	<com.echoesnet.eatandmeet.views.widgets.TopBarSwich.TopBarSwitch
		android:id="@+id/top_bar_switch"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:topbarType="TEXT"/>
	<LinearLayout
		android:id="@+id/ll_no_bind"
		android:layout_marginTop="1dp"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:background="@color/white"
		android:visibility="gone">
		<ImageView
			android:layout_width="360px"
			android:layout_height="360px"
			android:layout_marginTop="36px"
			android:src="@drawable/wode_bangding"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"

				android:text="请先绑定微信"
				android:textColor="@color/C0321"
				android:textSize="@dimen/f1"/>


		<Button
			android:id="@+id/btn_bind_ok"
			style="@style/circle_corner_btn_36_red_bg"
			android:layout_width="275dp"
			android:layout_height="44dp"
			android:layout_marginTop="87dp"
			android:text="绑 定"
			android:textColor="@color/white"
			android:textSize="@dimen/f1"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:text="提现将打款到微信零钱"
			android:textColor="@color/FC1"
			android:textSize="@dimen/f3"/>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="1dp">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="仅支持"
				android:textColor="@color/C0321"
				android:textSize="@dimen/f3"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="绑定过银行卡的微信"
				android:textColor="@color/c1"
				android:textSize="@dimen/f3"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="，否则将提现失败"
				android:textColor="@color/FC1"
				android:textSize="@dimen/f3"/>
		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/ll_withDraw"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:background="@color/main_background_color"
		android:visibility="visible">

		<com.makeramen.roundedimageview.RoundedImageView
			android:id="@+id/riv_head"
			android:layout_width="90dp"
			android:layout_height="90dp"
			android:layout_marginTop="60dp"
			android:src="@drawable/userhead"
			app:riv_oval="true"/>
		<TextView
			android:id="@+id/tv_nickname"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="11dp"
			tools:text="昵称"
			android:textColor="@color/C0321"
			android:textSize="@dimen/f3"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="54dp"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="12dp"
			android:layout_marginTop="35dp"
			android:background="@drawable/white">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="24px"
				android:text="￥"
				android:layout_gravity="center_vertical"
				android:textColor="@color/C0321"
				android:textSize="25sp"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:text="可提现:"
				android:layout_gravity="center_vertical"
				android:textColor="@color/C0331"
				android:textSize="@dimen/f3"/>
			<EditText
				android:id="@+id/et_draw_money"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingLeft="5dp"
				android:layout_weight="1"
				android:gravity="center_vertical|left"
				android:hint="0.0"
				android:background="@color/transparent"
				android:inputType="numberDecimal"
				android:textColorHint="@color/FC7"/>

		</LinearLayout>
		<Button
			android:id="@+id/btn_withDraw_ok"
			style="@style/circle_corner_btn_36_mc1_bg"
			android:layout_width="275dp"
			android:layout_height="44dp"
			android:layout_marginTop="230px"
			android:text="提 现"
			android:textColor="@color/white"
			android:textSize="@dimen/f1"/>
	</LinearLayout>

</LinearLayout>
