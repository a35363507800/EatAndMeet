<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:orientation="vertical"
	android:paddingLeft="24px"
	android:paddingRight="24px"
	tools:context="com.echoesnet.eatandmeet.activities.DRefundPolicyAct">
	<TextView android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:layout_gravity="center_horizontal"
			  android:layout_marginTop="40px"
			  android:text="用户帮助"
			  android:textColor="@color/c3"
			  android:textSize="@dimen/f1"
			  android:textStyle="bold"/>
	<View android:layout_width="match_parent" android:layout_height="2px"
		  android:layout_marginTop="20px"
		  android:background="@color/c5"></View>
	<ScrollView android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:scrollbars="none"
	>
		<TextView
			android:id="@+id/tv_refund_policy"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/c3"
			android:textSize="@dimen/f3"
			android:singleLine="false"
			android:lineSpacingMultiplier="1.5"
			android:layout_gravity="center_horizontal"
			android:layout_marginTop="10px"/>
	</ScrollView>

	<View android:layout_width="match_parent" android:layout_height="2px"
		  android:layout_marginBottom="20px"
		  android:background="@color/c5"></View>
	<Button
		android:id="@+id/btn_refund_close"
		android:layout_width="80px"
		android:layout_height="80px"
		android:layout_gravity="center_horizontal"
		android:background="@drawable/btn_close"
		android:layout_marginBottom="20px"/>

</com.zhy.autolayout.AutoLinearLayout>
