<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:background="@color/white"
	android:orientation="vertical"
	tools:context="com.echoesnet.eatandmeet.activities.MyVerifyIdAct">
	<include android:id="@+id/top_bar" layout="@layout/topbar_template"/>
	<!--姓名-->
	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="60px"
		android:paddingLeft="24px"
		android:paddingRight="24px">
		<com.joanzapata.iconify.widget.IconTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="{eam-e9a1}"
			android:textColor="@color/FC3"
			android:textSize="@dimen/f1"/>
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20px"
			android:layout_weight="1"
			android:orientation="vertical">
			<EditText
				android:id="@+id/ev_id_name"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_gravity="center_vertical"
				android:background="@color/transparent"
				android:hint="请如实填写您的姓名"
				android:textColor="@color/FC2"
				android:textColorHint="@color/FC3"
				android:textSize="@dimen/f3"/>
			<View android:layout_width="match_parent"
				  android:layout_height="2px"
				  android:layout_marginTop="20px"
				  android:background="@color/main_separator_color"/>
		</com.zhy.autolayout.AutoLinearLayout>
	</com.zhy.autolayout.AutoLinearLayout>
	<!--身份证号-->
	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="60px"
		android:paddingLeft="24px"
		android:paddingRight="24px">
		<com.joanzapata.iconify.widget.IconTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="{eam-e9af}"
			android:layout_marginTop="5px"
			android:textColor="@color/FC3"
			android:textSize="@dimen/f1"/>
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20px"
			android:layout_weight="1"
			android:orientation="vertical">
			<EditText
				android:id="@+id/ev_id_number"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_gravity="center_vertical"
				android:background="@color/transparent"
				android:digits="@string/register_name_digits"
				android:maxLength="18"
				android:hint="请如实填写您的身份证号"
				android:textColor="@color/FC2"
				android:textColorHint="@color/FC3"
				android:textSize="@dimen/f3"
			    />
			<View android:layout_width="match_parent"
				  android:layout_height="2px"
				  android:layout_marginTop="20px"
				  android:background="@color/main_separator_color"/>
			<TextView
				android:id="@+id/tv_instruction_3"
				android:layout_width="match_parent"
					  android:layout_height="wrap_content"
					  android:text="请确保证件号码与姓名真实有效，它是修改和找回支付密码的唯一途径"
					  android:textColor="@color/MC5"
					  android:textSize="@dimen/f4"
					  android:layout_marginTop="20px"
			          />
		</com.zhy.autolayout.AutoLinearLayout>
	</com.zhy.autolayout.AutoLinearLayout>
	<Button
		android:id="@+id/btn_id_info_commit"
		style="@style/circle_corner_btn_36_mc1_bg"
		android:layout_width="550px"
		android:layout_height="72px"
		android:layout_marginTop="100px"
		android:text="下一步"
		android:textColor="@color/white"
	    android:layout_gravity="center_horizontal"/>
</com.zhy.autolayout.AutoLinearLayout>
