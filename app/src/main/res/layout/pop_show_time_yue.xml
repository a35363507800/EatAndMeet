<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:textColor="@color/BlackP"
            android:text="选择您与主播约会的时间" />
        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/C0346P"
            android:textSize="@dimen/f3"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="完成"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_background_color"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_time_one"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:text="11:30\n—\n13:30"
            android:textSize="@dimen/f3"
            android:textColor="@drawable/appoint_txt_color_selector"
            android:background="@drawable/selector_choose_yue_time"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_time_two"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:textColor="@drawable/appoint_txt_color_selector"
            android:background="@drawable/selector_choose_yue_time"
            android:text="17:30\n—\n19:30"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_time_three"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:textColor="@drawable/appoint_txt_color_selector"
            android:background="@drawable/selector_choose_yue_time"
            android:text="19:30\n—\n00:00"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_time_four"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:textColor="@drawable/appoint_txt_color_selector"
            android:background="@drawable/selector_choose_yue_time"
            android:text="20:30\n—\n23:30"
            />

    </LinearLayout>
</LinearLayout>