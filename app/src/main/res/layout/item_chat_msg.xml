<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/llMsgItemGroup"
			  xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:minHeight="22dp"
			  android:orientation="horizontal"
			  tools:background="@color/MC1">

	<com.echoesnet.eatandmeet.views.widgets.LevelView
		android:id="@+id/level_view1"
		android:layout_width="wrap_content"
		android:layout_height="15dp"
		android:layout_marginLeft="6dp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="3dp"
		android:layout_gravity="top"
		android:textColor="@color/white"
		android:visibility="visible"
		app:text_size="@dimen/f6"/>

	<TextView
		android:id="@+id/tv_type"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="top"
		android:layout_marginLeft="6dp"
		android:layout_marginStart="10dp"
		android:ellipsize="end"
		android:lines="1"
		android:maxEms="8"
		android:textSize="@dimen/f2"
		tools:text="消息:"/>

	<TextView
		android:id="@+id/tvSender"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="top"
		android:layout_marginLeft="6dp"
		android:layout_marginStart="10dp"
		android:ellipsize="end"
		android:lines="1"
		android:maxEms="8"
		android:textSize="@dimen/f2"
		tools:text="王二狗发了一个红包"/>

	<TextView
		android:id="@+id/tvSendContent"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="2dp"
		android:layout_marginLeft="2dp"
		android:layout_marginRight="2dp"
		android:layout_weight="1"
		android:gravity="bottom"
		android:textColor="@color/black"
		android:textSize="@dimen/f2"
		android:visibility="visible"
		tools:text="这是内容啊这是内容啊这是内容啊这是内容啊这是内容啊这"
		tools:textColor="@color/MC2"/>

	<ImageView
		android:id="@+id/ivGift"
		android:layout_width="22dp"
		android:layout_height="22dp"
		android:scaleType="centerInside"
		android:visibility="gone"
		tools:src="@drawable/qs_zb"
		tools:visibility="visible"/>
	<TextView
		android:id="@+id/tvGiftNum"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="3dp"
		android:layout_marginStart="3dp"
		android:textColor="#edab2f"
		android:textSize="@dimen/f2"
		android:visibility="gone"
		tools:text="x123123123"
		tools:visibility="visible"/>

</LinearLayout>
