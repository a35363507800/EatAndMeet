<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/main_background_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <com.echoesnet.eatandmeet.views.widgets.TopBarSwich.TopBarSwitch
            android:id="@+id/top_bar_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:topbarType="TEXT"/>
        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/round_radius_3_white"
            android:gravity="top"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:padding="5dp"
            android:maxLength="500"
            android:layout_gravity="center_horizontal"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textColor="@color/C0321"
            android:textColorHint="@color/C0323"
            android:textSize="@dimen/f3"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/round_radius_3_fc5"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">
            <ImageView
                android:id="@+id/img_column"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="7dp"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/img_column"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_column_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/f4"
                    android:textColor="@color/C0321"/>
                <TextView
                    android:id="@+id/tv_column_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/f4"
                    android:textColor="@color/C0321"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/main_separator_color"/>
        <LinearLayout
            android:id="@+id/ll_select_location"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:orientation="horizontal">
            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="{eam-e9c1}"
                android:textColor="@color/C0313"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:focusable="true"
                android:layout_marginRight="10dp"
                android:focusableInTouchMode="true"
                android:lines="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxWidth="125dp"
                android:scrollHorizontally="true"
                android:text="选择位置"
                android:textColor="@color/C0321"
                android:textSize="@dimen/f3"/>
            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{eam-e909}"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/main_separator_color"/>
    </LinearLayout>

</LinearLayout>