<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_background_color">
    <RelativeLayout
        android:id="@+id/rl_live_cover"
        android:layout_width="wrap_content"
        android:layout_height="180dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_live_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/quesheng_xhdpi"
            app:riv_corner_radius_top_left="5dp"
            app:riv_corner_radius_top_right="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp">
            <ImageView
                android:id="@+id/img_live_sign"
                android:layout_width="64dp"
                android:layout_height="20dp"
                android:visibility="visible"
                android:layout_alignParentTop="true"
                android:layout_marginTop="12dp"
                android:src="@drawable/ico_touxian_jybb_xhdpi" />
            <TextView
                android:id="@+id/tv_live_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/f4"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginRight="6dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/round_green_border_black_bg"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/live_mask_new"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_room_name"
                android:layout_width="110dp"
                android:singleLine="true"
                android:textSize="@dimen/f4"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:maxLength="14"
                android:ellipsize="end"
                android:paddingBottom="8dp"
                android:layout_alignParentBottom="true"
                android:text="直播间标题为十五个字体五个字体"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_right_bottom_round_bg"
        android:layout_below="@+id/rl_live_cover"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/f3"
            android:textStyle="bold"
            android:lines="1"
            android:textColor="@color/C0321"/>
        <TextView
            android:id="@+id/live_watch_Num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/f3"
            android:text="1000"
            android:textColor="@color/C0313"/>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp">
            <com.echoesnet.eatandmeet.views.widgets.GenderView
                android:id="@+id/gender_view"
                android:layout_width="25dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"/>
            <com.echoesnet.eatandmeet.views.widgets.LevelView
                android:id="@+id/level_view"
                android:layout_width="25dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/gender_view"/>
            <TextView
                android:id="@+id/tv_anchor_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="@dimen/f4"
                android:textColor="@color/C0323P"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>