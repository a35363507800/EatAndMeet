<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="84dp"
	android:background="@color/white"
	android:descendantFocusability="blocksDescendants"
	android:orientation="vertical"
	android:paddingLeft="12dp"
	android:paddingRight="12dp">
	<com.echoesnet.eatandmeet.views.widgets.LevelHeaderView
		android:id="@+id/rdv_u_img"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_centerVertical="true"/>
	<com.zhy.autolayout.AutoLinearLayout
		android:id="@+id/rl_to_userDetail"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginLeft="24px"
		android:layout_toLeftOf="@+id/btn_operate"
		android:layout_toRightOf="@id/rdv_u_img"
		android:orientation="vertical"
		android:paddingBottom="20px"
		android:paddingTop="28px">

		<com.zhy.autolayout.AutoLinearLayout android:layout_width="wrap_content"
					  android:layout_height="0dp"
					  android:orientation="horizontal"
					  android:gravity="center_vertical"
					  android:layout_weight="1">

			<com.echoesnet.eatandmeet.views.widgets.LevelView
				android:id="@+id/level_view"
				android:layout_width="wrap_content"
				android:layout_height="13dp"
				/>
			<com.joanzapata.iconify.widget.IconTextView
				android:id="@+id/tv_age"
				android:layout_marginLeft="10px"
				android:layout_gravity="center_vertical"
				android:layout_width="30dp"
				android:layout_height="13dp"
				android:gravity="center"
				android:text="{eam-e94f}"
				android:textColor="@color/white"
				android:textSize="@dimen/f5"/>


			<!--android:layout_marginLeft="10px"
			android:layout_gravity="center_vertical"
			android:layout_width="60px"
			android:layout_height="30px"
			android:gravity="center"
			android:text="{eam-e94f @color/white @dimen/f5}"
			android:textColor="@color/white"
			android:textSize="@dimen/f5"-->

			<TextView
				android:id="@+id/tv_u_nickName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/FC1"
				android:textSize="@dimen/f3"
				android:layout_marginLeft="16px"
				/>
		</com.zhy.autolayout.AutoLinearLayout>
		<TextView
			android:id="@+id/tv_u_apply_type"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:singleLine="true"
			android:textColor="@color/FC1"
			android:textSize="@dimen/f3"/>

		<TextView
			android:id="@+id/tv_u_description"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:textColor="@color/FC2"
			android:textSize="@dimen/f4"/>


	</com.zhy.autolayout.AutoLinearLayout>


	<Button
		android:id="@+id/btn_operate"
		android:layout_width="70dp"
		android:layout_height="36dp"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:background="@drawable/round_cornor_18_mc7_bg"
		android:text="接 收"
		android:textColor="@color/MC7"
		android:textSize="@dimen/f3"/>
</com.zhy.autolayout.AutoRelativeLayout>