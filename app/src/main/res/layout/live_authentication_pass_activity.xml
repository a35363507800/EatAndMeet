<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	android:id="@+id/live_authentication_pass_activity"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/main_background_color"
	android:gravity="center_horizontal"
	android:orientation="vertical"
	tools:context="com.echoesnet.eatandmeet.activities.live.LiveAuthenticationPassActivity">
	<com.echoesnet.eatandmeet.views.widgets.TopBarSwich.TopBarSwitch
		android:id="@+id/top_bar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:topbarType="TEXT"/>


	<ImageView
		android:layout_width="match_parent"
		android:layout_height="225dp"
		android:scaleType="centerCrop"
		android:src="@drawable/zb_renzhengpass_xhdpi"/>
	<TextView
		android:id="@+id/tv_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="15dp"
		android:paddingBottom="15dp"
		android:background="@color/white"
		android:gravity="center_horizontal"
		android:layout_marginTop="20px"
		android:text="已认证信息"
		android:textColor="@color/C0321"
		android:textSize="@dimen/f2"/>
	<com.zhy.autolayout.AutoLinearLayout
		android:id="@+id/ll_auth_info"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="2px"
		android:background="@color/white"
		android:orientation="vertical">
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="100px"
			android:padding="24px">
			<TextView
				android:text="真实姓名："
				android:textColor="@color/FC1"
				android:textSize="@dimen/f2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			<TextView
				android:id="@+id/tv_pass_realName"
				android:text=""
				android:textColor="@color/FC1"
				android:textSize="@dimen/f2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</com.zhy.autolayout.AutoLinearLayout>
		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="100px"
			android:padding="24px">
			<TextView
				android:text="身份证号："
				android:textColor="@color/FC1"
				android:textSize="@dimen/f2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			<TextView
				android:id="@+id/tv_pass_idCard"
				android:text=""
				android:textColor="@color/FC1"
				android:textSize="@dimen/f2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</com.zhy.autolayout.AutoLinearLayout>
	</com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
