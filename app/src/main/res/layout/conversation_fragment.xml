<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  xmlns:tool="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/main_background_color"
			  android:orientation="vertical">
	<TextView
		android:id="@+id/tv_error_container"
		android:layout_width="match_parent"
		android:layout_height="35dp"
		android:background="@color/C0312P"
		android:gravity="center"
		android:text="与服务器失去连接"
		android:textColor="@color/white"
		android:textSize="@dimen/f1"
		android:visibility="gone"/>
	<include android:id="@+id/search_bar"
			 layout="@layout/ease_search_bar_click"
			 android:layout_width="match_parent"
			 android:layout_height="30dp"
			 android:layout_margin="6dp"/>
	<RelativeLayout
		android:id="@+id/rl_hello"
		android:layout_width="match_parent"
		android:layout_height="70dp"
		android:layout_marginBottom="6dp"
		android:background="@color/white">

		<RelativeLayout
			android:id="@+id/rl_hint"
			android:layout_width="wrap_content"
			android:layout_height="match_parent">

			<com.makeramen.roundedimageview.RoundedImageView
				android:id="@+id/riv_hello"
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:layout_centerVertical="true"
				android:layout_marginLeft="12dp"
				android:src="@drawable/ico_dazhaohu"/>

			<TextView
				android:id="@+id/ctv_sys_unRead"
				android:layout_width="wrap_content"
				android:layout_height="14dp"
				android:layout_marginLeft="-10dp"
				android:layout_marginTop="5dp"
				android:layout_toRightOf="@+id/riv_hello"
				android:background="@drawable/shape_circle_c0319_bg"
				android:gravity="center"
				android:minWidth="14dp"
				android:paddingLeft="3dp"
				android:paddingRight="3dp"
				android:text="6"
				android:textColor="@color/C0324"
				android:textSize="@dimen/f6"
				android:visibility="gone"
			/>

		</RelativeLayout>
		<TextView
			android:id="@+id/tv_hello_summary"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="12dp"
			android:layout_marginTop="10dp"
			android:layout_toRightOf="@id/rl_hint"
			android:text="还没有人跟你打招呼哦~"
			android:textColor="@color/C0321"
			android:textSize="@dimen/f3"/>
		<TextView
			android:id="@+id/tv_hello_last_body"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_hello_summary"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="12dp"
			android:layout_marginTop="6dp"
			android:layout_toRightOf="@id/rl_hint"
			android:ellipsize="end"
			android:gravity="center_vertical"
			android:maxLines="1"
			android:singleLine="true"
			android:text="快去首页看看吧~"
			android:textColor="@color/C0322"
			android:textSize="@dimen/f3"
			tool:text="张三：小美女来玩玩啊"/>
		<TextView
			android:id="@+id/tv_hello_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginRight="12dp"
			android:layout_marginTop="15dp"
			android:textColor="@color/C0322"
			android:textSize="@dimen/f6"
			tool:text="5:08"/>
	</RelativeLayout>
	<com.echoesnet.eatandmeet.views.widgets.IMwidget.ConversationList
		android:id="@+id/rv_conversation"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>
	<com.echoesnet.eatandmeet.utils.EmptyView
		android:id="@+id/empty_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>
	<TextView
		android:id="@+id/live_empty_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:background="@color/white"
		android:text="还没有开始聊天哦~"
		android:textColor="@color/C0322"
		android:textSize="@dimen/f3"/>
</LinearLayout>